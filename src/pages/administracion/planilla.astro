---
export const prerender = false;
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import LeftBar from "../../components/LeftBar.astro";

const sidebarOptions = ["Consumibles", "Productos", "Ingredientes", "Proveedores", "Planilla"];

// Fetch de datos de usuarios (planilla)
const response = await fetch("http://localhost:3484/api/users", {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
    },
});

// Fetch de tipos de usuario para los selects
const userTypesResponse = await fetch("http://localhost:3484/api/user-types", {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
    },
});

let usersData = [];
let userTypesData = [];

if (response.ok) {
    const result = await response.json();
    usersData = result.data || result;
    console.log('Datos de usuarios:', usersData);
} else {
    console.error("Error fetching users data:", response.statusText);
}

if (userTypesResponse.ok) {
    const result = await userTypesResponse.json();
    userTypesData = result.data || result;
    console.log('Datos de tipos de usuario:', userTypesData);
} else {
    console.error("Error fetching user types data:", userTypesResponse.statusText);
}

const initialUsers = usersData || [];
