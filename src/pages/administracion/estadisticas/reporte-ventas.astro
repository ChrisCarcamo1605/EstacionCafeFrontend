const estadisticasRouteMap: Record<string, string> = {
    "Estadisticas de Ventas": "/administracion/estadisticas/estadisticas-ventas",
    "Estadisticas de Gastos": "/administracion/estadisticas/estadisticas-gastos",
    "Reporte de Ventas": "/administracion/estadisticas/reporte-ventas"
};

let jsonData = null;
let facturas = [];
let apiError = null;

try {
    console.log('üîç Iniciando fetch a la API...');
    const response = await fetch("http://localhost:3484/api/bills", {
        method: "GET",
        headers: {
            "Content-Type": "application/json",
        },
    });

    console.log('üì° Response status:', response.status, response.statusText);
    
    if (response.ok) {
        jsonData = await response.json();
        console.log("‚úÖ Datos crudos de la API:", jsonData);
        
        if (jsonData && jsonData.data) {
            facturas = jsonData.data.map((factura: any) => {
                let fechaValida = factura.date;
                
                if (!fechaValida || fechaValida.includes('#') || fechaValida.includes('A#') || isNaN(new Date(fechaValida).getTime())) {
                    console.warn('Fecha inv√°lida encontrada:', fechaValida);
                    
                    if (factura.customer && /\d{1,2}\/\d{1,2}\/\d{4}/.test(factura.customer)) {
                        const fechaMatch = factura.customer.match(/(\d{1,2}\/\d{1,2}\/\d{4})/);
                        if (fechaMatch) {
                            const [dia, mes, a√±o] = fechaMatch[0].split('/');
                            fechaValida = `${a√±o}-${mes.padStart(2, '0')}-${dia.padStart(2, '0')}`;
                        }
                    }
                    
                    if (!fechaValida || isNaN(new Date(fechaValida).getTime())) {
                        fechaValida = new Date().toISOString();
                    }
                }
                
                let clienteLimpio = factura.customer || 'Cliente';
                clienteLimpio = clienteLimpio.replace(/\d{1,2}\/\d{1,2}\/\d{2,4}/g, '').trim();
                clienteLimpio = clienteLimpio.replace(/^[\s\-_]+|[\s\-_]+$/g, '');
                if (!clienteLimpio) clienteLimpio = 'Cliente';
                
                let totalValido = factura.total;
                if (typeof totalValido === 'string') {
                    totalValido = totalValido.replace(/[^\d,.]/g, '');
                    totalValido = totalValido.replace(',', '.');
                }
                
                return {
                    ...factura,
                    date: fechaValida,
                    customer: clienteLimpio,
                    total: parseFloat(totalValido) || 0
                };
            });
            
            console.log("‚úÖ Datos procesados:", facturas);
        } else {
            console.warn("‚ö†Ô∏è La API respondi√≥ pero sin datos v√°lidos:", jsonData);
            apiError = "La API no retorn√≥ datos v√°lidos";
        }
    } else {
        console.error("‚ùå Error HTTP:", response.status, response.statusText);
        apiError = `Error ${response.status}: ${response.statusText}`;
    }
} catch (error) {
    console.error("‚ùå Error en la petici√≥n a la API:", error);
    apiError = `Error de conexi√≥n: ${error instanceof Error ? error.message : String(error)}`;
}

const formatDate = (dateString: string) => {
    try {
        if (typeof dateString === 'string' && dateString.includes('/')) {
            const [part1, part2, part3] = dateString.split('/');
            if (part3 && part3.length === 4) {
                dateString = `${part3}-${part2.padStart(2, '0')}-${part1.padStart(2, '0')}`;
            }
        }
        
        const date = new Date(dateString);
        if (isNaN(date.getTime())) {
            return 'Fecha inv√°lida';
        }
        return date.toLocaleDateString('es-ES');
    } catch (error) {
        return 'Error fecha';
    }
};

const getDayOfWeek = (dateString: string) => {
    try {
        const date = new Date(dateString);
        if (isNaN(date.getTime())) {
            return 'D√≠a inv√°lido';
        }
        const days = ['Domingo', 'Lunes', 'Martes', 'Mi√©rcoles', 'Jueves', 'Viernes', 'S√°bado'];
        return days[date.getDay()];
    } catch (error) {
        return 'Error d√≠a';
    }
};

const getTime = (dateString: string) => {
    try {
        const date = new Date(dateString);
        if (isNaN(date.getTime())) {
            return 'Hora inv√°lida';
        }
        return date.toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit' });
    } catch (error) {
        return 'Error hora';
    }
};
