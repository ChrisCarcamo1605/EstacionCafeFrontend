---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import loginImage from '../../public/loginimage.jpg'
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menú Principal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Pattaya&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        
        .menu-item {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
            cursor: pointer;
            border: none !important;
        }
        
        .menu-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }
        
        .menu-item img {
            transition: transform 0.5s ease;
            filter: brightness(0.7);
        }
        
        .menu-item:hover img {
            transform: scale(1.05);
            filter: brightness(0.8);
        }
        
        .pattaya-text {
            font-family: 'Pattaya', sans-serif;
            color: #F3DCBB;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.7);
            font-size: 1.8rem;
            font-weight: normal;
            font-style: normal;
        }
        
       
        .container-expanded {
            max-width: 1400px;
        }
        
        .img-expanded {
            height: 280px !important;
        }
        
        @media (max-width: 768px) {
            .pattaya-text {
                font-size: 1.5rem;
            }
            
            .img-expanded {
                height: 220px !important;
            }
        }
        
        @media (max-width: 576px) {
            .pattaya-text {
                font-size: 1.3rem;
            }
            
            .img-expanded {
                height: 180px !important;
            }
        }
    </style>
</head>
<body>

    <Layout>
        <Navbar />
    </Layout>

    <div class="container-expanded container py-4">
        <div class="row g-3">
            <!-- Realizar Pedido -->
            <div class="col-md-6">
                <div class="menu-item position-relative shadow-lg rounded">
                    <img src="home1.png" alt="Pedidos" class="img-fluid w-100 img-expanded" style="object-fit: cover;">
                    <div class="position-absolute top-50 start-50 translate-middle text-center w-100">
                        <h3 class="mb-0 pattaya-text">Realizar Pedido</h3>
                    </div>
                </div>
            </div>
            
            <!-- Mesa -->
            <div class="col-md-6">
                <div class="menu-item position-relative shadow-lg rounded">
                    <img src="home2.png" alt="Mesa" class="img-fluid w-100 img-expanded" style="object-fit: cover;">
                    <div class="position-absolute top-50 start-50 translate-middle text-center w-100">
                        <h3 class="mb-0 pattaya-text">Mesa</h3>
                    </div>
                </div>
            </div>
            
            <!-- Para llevar -->
            <div class="col-md-6">
                <div class="menu-item position-relative shadow-lg rounded">
                    <img src="home3.png" alt="Para llevar" class="img-fluid w-100 img-expanded" style="object-fit: cover;">
                    <div class="position-absolute top-50 start-50 translate-middle text-center w-100">
                        <h3 class="mb-0 pattaya-text">Para llevar</h3>
                    </div>
                </div>
            </div>
            
            <!-- Administración -->
            <div class="col-md-6">
                <div class="menu-item position-relative shadow-lg rounded">
                    <img src="home4.png" alt="Administración" class="img-fluid w-100 img-expanded" style="object-fit: cover;">
                    <div class="position-absolute top-50 start-50 translate-middle text-center w-100">
                        <h3 class="mb-0 pattaya-text">Administración</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>