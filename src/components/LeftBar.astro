---
interface Props {
  options?: string[];
  title: string;
  selectedOption?: string;
}

const { options = [], title, selectedOption = "" } = Astro.props;
---

<!-- Cargar la fuente Pattaya solo para este componente -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Pattaya&display=swap" rel="stylesheet">

<div
  class="siderbar_left d-flex align-items-center flex-column border-end pt-3 px-3 z-2"
>
  <div class="w-100 d-flex flex-row align-items-left">
    <div role="button" class="back-button">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        ><path
          fill="currentColor"
          d="m4 10l-.707.707L2.586 10l.707-.707zm17 8a1 1 0 1 1-2 0zM8.293 15.707l-5-5l1.414-1.414l5 5zm-5-6.414l5-5l1.414 1.414l-5 5zM4 9h10v2H4zm17 7v2h-2v-2zm-7-7a7 7 0 0 1 7 7h-2a5 5 0 0 0-5-5z"
        ></path></svg
      >
      <span>Volver</span>
    </div>
  </div>

  <div class="mt-5 align-items-center w-100">
    <!-- TÃ­tulo con fuente Pattaya -->
    <h2 class="text-center pattaya-title">{title}</h2>

    <div class="d-flex pt-4 flex-column gap-0 align-items-center w-100">
      {
        options && options.length > 0 ? (
          options.map((option: string) => {
            const isSelected = selectedOption === option;
            return (
              <div class="option-container w-100">
                <div class={`sidebar_option w-100 ${isSelected ? 'selected' : ''}`}>
                  <span class="option-text">{option}</span>
                </div>
              </div>
            );
          })
        ) : (
          <span>No hay opciones disponibles</span>
        )
      }
    </div>
  </div>
</div>

<style is:global>
  .pattaya-title {
    font-family: 'Pattaya', serif;
    font-size: 2.8rem;
    font-weight: 400;
    color: #2c3e50;
    margin-bottom: 2rem;
  }
  
  .siderbar_left {
    background-color: #f8f9fa;
    min-height: 100vh;
    width: 280px;
  }
  
  .back-button {
    padding: 8px 12px;
    cursor: pointer;
    border-radius: 6px;
    transition: all 0.2s ease-in-out;
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .back-button:hover {
    background-color: #e9ecef;
  }
  
  .option-container {
    width: 100% !important;
  }
  
  .sidebar_option {
    padding: 14px 20px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    width: 100% !important;
    text-align: center;
    border-radius: 8px;
    margin: 2px 0;
    box-sizing: border-box;
  }
  
  .sidebar_option:hover {
    background-color: #f5f1ee !important;
    color: #5d4037 !important;
  }
  
  .sidebar_option.selected {
    background-color: #f5f1ee !important;
    color: #5d4037 !important;
    font-weight: 600;
    border-right: 4px solid #8d6e63 !important;
  }
  
  .option-text {
    font-size: 1rem;
    font-weight: 500;
  }
</style>