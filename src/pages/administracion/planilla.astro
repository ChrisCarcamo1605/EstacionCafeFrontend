                                                <path d="M6 10.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z"/>
                                            </svg>
                                            Filtrar
                                        </button>
                                    </div>
                                </div>

                                <div class="mt-3" id="filtersAccordion" style="display: none;">
                                    <div class="card card-body border-0 shadow-sm">
                                        <h6 class="fw-bold mb-3">Filtros Avanzados</h6>

                                        <div class="row g-3">
                                            <div class="col-md-4">
                                                <label class="form-label fw-semibold">ID</label>
                                                <input
                                                        type="text"
                                                        class="form-control filter-input"
                                                        id="filterId"
                                                        placeholder="Buscar por ID"
                                                />
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label fw-semibold">Usuario</label>
                                                <input
                                                        type="text"
                                                        class="form-control filter-input"
                                                        id="filterUsername"
                                                        placeholder="Buscar por usuario"
                                                />
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label fw-semibold">Correo Electrónico</label>
                                                <input
                                                        type="email"
                                                        class="form-control filter-input"
                                                        id="filterEmail"
                                                        placeholder="Buscar por correo"
                                                />
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label fw-semibold">Rol</label>
                                                <select class="form-select filter-input" id="filterRole">
                                                    <option value="">Todos los roles</option>
                                                    {userTypesData.map((userType: any) => (
                                                            <option value={userType.userTypeId || userType.id}>{userType.name || 'N/A'}</option>
                                                    ))}
                                                </select>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label fw-semibold">Mostrar Inactivos</label>
                                                <select class="form-select filter-input" id="filterStatus">
                                                    <option value="active">Solo activos</option>
                                                    <option value="inactive">Solo inactivos</option>
                                                    <option value="">Todos los estados</option>
                                                </select>
                                            </div>

                                            <div class="col-md-4 d-flex align-items-end gap-2">
                                                <button
                                                        class="btn btn-primary flex-grow-1"
                                                        id="applyFilters"
                                                        style="background-color: #482E21; border-color: #482E21;"
                                                >
                                                    Aplicar Filtros
                                                </button>
                                                <button
                                                        class="btn btn-outline-secondary"
                                                        id="clearFilters"
                                                >
                                                    Limpiar
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-5">
                            <div class="card shadow-sm border-0" style="border-radius: 8px;">
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-hover mb-0">
                                            <thead style="background-color: #482E21; color: white;">
                                            <tr>
                                                <th scope="col" style="width: 10%;">ID</th>
                                                <th scope="col" style="width: 20%;">Usuario</th>
                                                <th scope="col" style="width: 25%;">Correo Electrónico</th>
                                                <th scope="col" style="width: 20%;">Rol</th>
                                                <th scope="col" style="width: 15%;">Estado</th>
                                            </tr>
                                            </thead>
                                            <tbody id="usersTableBody">
                                            {initialUsers.length > 0 ? (
                                                initialUsers
                                                    .filter((user: any) => user.active !== false)
                                                    .map((user: any) => (
                                                            <tr data-user-id={user.userId || user.id}>
                                                                <th scope="row">{user.userId || user.id || 'N/A'}</th>
                                                                <td>{user.username || user.name || ''}</td>
                                                                <td>{user.email || ''}</td>
                                                                <td>{user.userType?.name || user.role || ''}</td>
                                                                <td>
                                                                    <span class={`badge ${(user.active !== false) ? 'bg-success' : 'bg-danger'}`}>
                                                                        {(user.active !== false) ? 'Activo' : 'Inactivo'}
                                                                    </span>
                                                                </td>
                                                            </tr>
                                                    ))
                                            ) : (
                                                    <tr>
                                                        <td colspan="5" class="text-center py-4">
                                                            <div class="text-muted">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-inbox" viewBox="0 0 16 16">
                                                                    <path d="M4.98 4a.5.5 0 0 0-.39.188L1.54 8H6a.5.5 0 0 1 .5.5 1.5 1.5 0 1 0 3 0A.5.5 0 0 1 10 8h4.46l-3.05-3.812A.5.5 0 0 0 11.02 4H4.98zm-1.17-.437A1.5 1.5 0 0 1 4.98 3h6.04a1.5 1.5 0 0 1 1.17.563l3.7 4.625a.5.5 0 0 1 .106.374l-.39 3.124A1.5 1.5 0 0 1 14.117 13H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .106-.374l3.7-4.625z"/>
                                                                </svg>
                                                                <p class="mt-2 mb-0">No hay datos disponibles</p>
                                                                <small>Verifica que el endpoint esté funcionando correctamente</small>
                                                            </div>
                                                        </td>
                                                    </tr>
                                            )}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <div
            id="initial-users-data"
            data-users={JSON.stringify(initialUsers)}
            style="display: none;"
    ></div>

    <script>
        // Definir tipos para TypeScript
        interface RouteMap {
            Consumibles: string;
            Productos: string;
            Ingredientes: string;
            Proveedores: string;
            Planilla: string;
        }

        interface User {
            userId?: string;
            id?: string;
            username?: string;
            name?: string;
            email?: string;
            role?: string;
            userType?: any;
            userTypeId?: string;
            active?: boolean;
        }

        const routeMap: RouteMap = {
            "Consumibles": "/administracion/inventario/consumibles",
            "Productos": "/administracion/inventario/productos",
            "Ingredientes": "/administracion/inventario/ingredientes",
            "Proveedores": "/administracion/inventario/proveedores",
            "Planilla": "/administracion/planilla"
        };

        function setupLeftBarNavigation() {
            console.log('Configurando navegación del LeftBar para Administración...');

            setTimeout(() => {
                const options = ["Consumibles", "Productos", "Ingredientes", "Proveedores", "Planilla"];

                options.forEach(optionText => {
                    const elements = document.querySelectorAll('*');
                    elements.forEach(element => {
                        const htmlElement = element as HTMLElement;
                        if (htmlElement.textContent?.trim() === optionText && routeMap[optionText as keyof RouteMap]) {
                            if (!htmlElement.hasAttribute('data-nav-configured')) {
                                htmlElement.style.cursor = 'pointer';
                                htmlElement.setAttribute('data-nav-configured', 'true');

                                htmlElement.addEventListener('click', (e) => {
                                    e.preventDefault();
                                    e.stopPropagation();
                                    const route = routeMap[optionText as keyof RouteMap];
                                    console.log('Navegando a:', route);
                                    window.location.href = route;
                                });

                                htmlElement.addEventListener('mouseenter', () => {
                                    htmlElement.style.backgroundColor = '#f8f9fa';
                                    htmlElement.style.transition = 'background-color 0.2s';
                                });
                                htmlElement.addEventListener('mouseleave', () => {
                                    htmlElement.style.backgroundColor = '';
                                });

                                console.log('Configurado elemento para:', optionText);
                            }
                        }
                    });
                });
            }, 100);
        }

        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM cargado, inicializando navegación de administración...');

            setupLeftBarNavigation();

            console.log('Inicializando funcionalidad de planilla...');

            // Declarar variables con tipos específicos
            let selectedUserId: string | null = null;
            let allUsers: User[] = [];
            let currentFilteredUsers: User[] = [];
            let showInactive = false;

            // Obtener elementos del DOM con tipos específicos
            const addUserBtn = document.getElementById('addUserBtn') as HTMLButtonElement | null;
            const updateUserBtn = document.getElementById('updateUserBtn') as HTMLButtonElement | null;
            const deleteUserBtn = document.getElementById('deleteUserBtn') as HTMLButtonElement | null;
            const message = document.getElementById('message') as HTMLDivElement | null;

            // Obtener elementos de formulario con tipos específicos
            const searchId = document.getElementById('searchId') as HTMLInputElement | null;
            const searchUsername = document.getElementById('searchUsername') as HTMLInputElement | null;
            const searchEmail = document.getElementById('searchEmail') as HTMLInputElement | null;
            const searchRole = document.getElementById('searchRole') as HTMLSelectElement | null;
            const searchStatus = document.getElementById('searchStatus') as HTMLSelectElement | null;

            async function addNewUser() {
                const username = searchUsername?.value.trim();
                const email = searchEmail?.value.trim();
                const userTypeId = searchRole?.value;
                const status = searchStatus?.value;

                if (!username || !email || !userTypeId) {
                    showMessage('Por favor complete los campos Usuario, Correo Electrónico y Rol', 'error');
                    return;
                }

                try {
                    const userData = {
                        username: username,
                        email: email,
                        userTypeId: userTypeId,
                        active: status === 'active',
                        password: "default123" // Contraseña por defecto
                    };

                    console.log('Enviando datos para agregar:', userData);

                    const response = await fetch('http://localhost:3484/api/users', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(userData)
                    });

                    if (response.ok) {
                        const result = await response.json();
                        console.log('Usuario agregado exitosamente:', result);
                        showMessage('Usuario agregado exitosamente', 'success');
                        clearForm();
                        setTimeout(() => {
                            location.reload();
                        }, 1500);
                    } else {
                        const errorData = await response.json();
                        console.error('Error al agregar usuario:', errorData);
                        showMessage(`Error: ${errorData.message || 'No se pudo agregar el usuario'}`, 'error');
                    }
                } catch (error) {
                    console.error('Error de red:', error);
                    showMessage('Error de conexión. Verifique que el servidor esté funcionando.', 'error');
                }
            }

            async function updateUser() {
                if (!selectedUserId) {
                    showMessage('Por favor seleccione un usuario de la tabla haciendo clic en la fila', 'error');
                    return;
                }

                const username = searchUsername?.value.trim();
                const email = searchEmail?.value.trim();
                const userTypeId = searchRole?.value;
                const status = searchStatus?.value;

                if (!username || !email || !userTypeId) {
                    showMessage('Por favor complete los campos Usuario, Correo Electrónico y Rol', 'error');
                    return;
                }

                try {
                    const userData = {
                        username: username,
                        email: email,
                        userTypeId: userTypeId,
                        active: status === 'active'
                    };

                    console.log('Enviando datos para actualizar:', userData, 'ID:', selectedUserId);

                    const response = await fetch(`http://localhost:3484/api/users/${selectedUserId}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(userData)
                    });

                    if (response.ok) {
                        const result = await response.json();
                        console.log('Usuario actualizado exitosamente:', result);
                        showMessage('Usuario actualizado exitosamente', 'success');
                        clearSelection();
                        clearForm();
                        setTimeout(() => {
                            location.reload();
                        }, 1500);
                    } else {
                        const errorData = await response.json();
                        console.error('Error al actualizar usuario:', errorData);
                        showMessage(`Error: ${errorData.message || 'No se pudo actualizar el usuario'}`, 'error');
                    }
                } catch (error) {
                    console.error('Error de red:', error);
                    showMessage('Error de conexión. Verifique que el servidor esté funcionando.', 'error');
                }
            }

            async function deleteUser() {
                if (!selectedUserId) {
                    showMessage('Por favor seleccione un usuario de la tabla haciendo clic en la fila', 'error');
                    return;
                }

                if (!confirm('¿Está seguro de que desea eliminar este usuario?')) {
                    return;
                }

                try {
                    console.log('Eliminando usuario ID:', selectedUserId);

                    const response = await fetch(`http://localhost:3484/api/users/${selectedUserId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    });

                    if (response.ok) {
                        console.log('Usuario eliminado exitosamente');
                        showMessage('Usuario eliminado exitosamente', 'success');
                        clearSelection();
                        clearForm();
                        setTimeout(() => {
                            location.reload();
                        }, 1500);
                    } else {
                        const errorData = await response.json();
                        console.error('Error al eliminar usuario:', errorData);
                        showMessage(`Error: ${errorData.message || 'No se pudo eliminar el usuario'}`, 'error');
                    }
                } catch (error) {
                    console.error('Error de red:', error);
                    showMessage('Error de conexión. Verifique que el servidor esté funcionando.', 'error');
                }
            }

            function showMessage(text: string, type: 'success' | 'error' | 'info') {
                if (!message) return;

                message.textContent = text;
                message.style.display = 'block';
                message.className = `alert alert-${type === 'success' ? 'success' : type === 'info' ? 'info' : 'danger'} mt-3`;

                setTimeout(() => {
                    message.style.display = 'none';
                }, 5000);
            }

            function clearForm() {
                if (searchId) searchId.value = '';
                if (searchUsername) searchUsername.value = '';
                if (searchEmail) searchEmail.value = '';
                if (searchRole) searchRole.value = '';
                if (searchStatus) searchStatus.value = 'active';
            }

            function clearSelection() {
                selectedUserId = null;
                const allRows = document.querySelectorAll('#usersTableBody tr');
                allRows.forEach(row => {
                    row.classList.remove('table-primary');
                });
            }

            function loadUserData(userId: string) {
                console.log('Buscando usuario con ID:', userId);
                console.log('Usuarios filtrados actuales:', currentFilteredUsers);

                const user = currentFilteredUsers.find(u => {
                    const id = u.userId || u.id;
                    return id == userId;
                });

                if (!user) {
                    console.error('Usuario no encontrado con ID:', userId);
                    showMessage('Error: No se pudo cargar los datos del usuario', 'error');
                    return;
                }

                console.log('Usuario encontrado:', user);

                if (searchId) searchId.value = user.userId || user.id || '';
                if (searchUsername) searchUsername.value = user.username || user.name || '';
                if (searchEmail) searchEmail.value = user.email || '';
                if (searchRole) searchRole.value = user.userTypeId || '';
                if (searchStatus) searchStatus.value = (user.active !== false) ? 'active' : 'inactive';

                console.log('Formulario llenado exitosamente para usuario:', userId);
            }

            // Configurar event listeners
            if (addUserBtn) {
                addUserBtn.addEventListener('click', addNewUser);
            }

            if (updateUserBtn) {
                updateUserBtn.addEventListener('click', updateUser);
            }

            if (deleteUserBtn) {
                deleteUserBtn.addEventListener('click', deleteUser);
            }

            // Sistema de selección de filas
            let lastClickTime = 0;
            const DOUBLE_CLICK_DELAY = 300;

            const tableBody = document.getElementById('usersTableBody');
            if (tableBody) {
                tableBody.addEventListener('click', function(event: MouseEvent) {
                    const target = event.target as HTMLElement;
                    const row = target.closest('tr') as HTMLTableRowElement;

                    if (row && row.getAttribute('data-user-id')) {
                        const currentTime = new Date().getTime();
                        const timeSinceLastClick = currentTime - lastClickTime;

                        if (timeSinceLastClick < DOUBLE_CLICK_DELAY) {
                            console.log('Doble clic detectado en fila');
                            handleDoubleClick(row);
                        } else {
                            handleSingleClick(row);
                        }

                        lastClickTime = currentTime;
                    }
                });
            }

            function handleSingleClick(row: HTMLTableRowElement) {
                const allRows = document.querySelectorAll('#usersTableBody tr');
                allRows.forEach(r => {
                    r.classList.remove('table-primary');
                });

                row.classList.add('table-primary');

                selectedUserId = row.getAttribute('data-user-id');

                console.log('Usuario seleccionado (clic simple):', selectedUserId);
            }

            function handleDoubleClick(row: HTMLTableRowElement) {
                const userId = row.getAttribute('data-user-id');
                if (!userId) return;

                console.log('Procesando doble clic para usuario ID:', userId);

                handleSingleClick(row);

                loadUserData(userId);

                showMessage(`Datos del usuario cargados en el formulario. Puede editarlos y hacer clic en "Actualizar".`, 'info');

                console.log('Formulario llenado automáticamente (doble clic) para usuario:', userId);
            }

            // Sistema de filtros y ordenamiento
            const applyFiltersBtn = document.getElementById('applyFilters') as HTMLButtonElement | null;
            const clearFiltersBtn = document.getElementById('clearFilters') as HTMLButtonElement | null;
            const filterButton = document.getElementById('filterButton') as HTMLButtonElement | null;
            const filtersAccordion = document.getElementById('filtersAccordion') as HTMLDivElement | null;
            const sortButton = document.getElementById('sortButton') as HTMLButtonElement | null;
            const sortDropdown = document.getElementById('sortDropdown') as HTMLDivElement | null;

            const filterId = document.getElementById('filterId') as HTMLInputElement | null;
            const filterUsername = document.getElementById('filterUsername') as HTMLInputElement | null;
            const filterEmail = document.getElementById('filterEmail') as HTMLInputElement | null;
            const filterRole = document.getElementById('filterRole') as HTMLSelectElement | null;
            const filterStatus = document.getElementById('filterStatus') as HTMLSelectElement | null;

            const initialDataElement = document.getElementById('initial-users-data');

            if (initialDataElement && initialDataElement.dataset.users) {
                allUsers = JSON.parse(initialDataElement.dataset.users);
                console.log('Datos iniciales cargados:', allUsers.length, 'usuarios');
            } else {
                console.error('No se pudieron cargar los datos iniciales');
                allUsers = [];
            }

            let currentFilters = {
                id: '',
                username: '',
                email: '',
                role: '',
                status: 'active',
            };

            let currentSort = {
                by: 'id',
                order: 'asc'
            };

            let isFiltersVisible = false;
            let isSortVisible = false;

            function toggleSortDropdown() {
                isSortVisible = !isSortVisible;
                if (sortDropdown) {
                    if (isSortVisible) {
                        sortDropdown.style.display = 'block';
                        if (sortButton) sortButton.classList.add('active');
                        if (isFiltersVisible) {
                            toggleFiltersAccordion();
                        }
                    } else {
                        sortDropdown.style.display = 'none';
                        if (sortButton) sortButton.classList.remove('active');
                    }
                }
            }

            function toggleFiltersAccordion() {
                isFiltersVisible = !isFiltersVisible;
                if (filtersAccordion) {
                    if (isFiltersVisible) {
                        filtersAccordion.style.display = 'block';
                        if (filterButton) filterButton.classList.add('active');
                        if (isSortVisible) {
                            toggleSortDropdown();
                        }
                    } else {
                        filtersAccordion.style.display = 'none';
                        if (filterButton) filterButton.classList.remove('active');
                    }
                }
            }

            function applySort(sortBy: string, sortOrder: string) {
                console.log('Aplicando ordenamiento:', sortBy, sortOrder);
                if (sortBy) currentSort.by = sortBy;
                if (sortOrder) currentSort.order = sortOrder;
                updateTable();

                if (isSortVisible) {
                    toggleSortDropdown();
                }
            }

            function applyQuickSearch() {
                console.log('Aplicando búsqueda rápida...');
                currentFilters = {
                    id: searchId ? searchId.value.toLowerCase() : '',
                    username: searchUsername ? searchUsername.value.toLowerCase() : '',
                    email: searchEmail ? searchEmail.value.toLowerCase() : '',
                    role: searchRole ? searchRole.value : '',
                    status: searchStatus ? searchStatus.value : 'active',
                };
                updateTable();
            }

            function applyAdvancedFilters() {
                console.log('Aplicando filtros avanzados...');
                currentFilters = {
                    id: filterId ? filterId.value.toLowerCase() : '',
                    username: filterUsername ? filterUsername.value.toLowerCase() : '',
                    email: filterEmail ? filterEmail.value.toLowerCase() : '',
                    role: filterRole ? filterRole.value : '',
                    status: filterStatus ? filterStatus.value : 'active',
                };
                updateTable();

                if (isFiltersVisible) {
                    toggleFiltersAccordion();
                }
            }

            function clearAllFilters() {
                console.log('Limpiando todos los filtros...');

                if (searchId) searchId.value = '';
                if (searchUsername) searchUsername.value = '';
                if (searchEmail) searchEmail.value = '';
                if (searchRole) searchRole.value = '';
                if (searchStatus) searchStatus.value = 'active';

                if (filterId) filterId.value = '';
                if (filterUsername) filterUsername.value = '';
                if (filterEmail) filterEmail.value = '';
                if (filterRole) filterRole.value = '';
                if (filterStatus) filterStatus.value = 'active';

                currentFilters = {
                    id: '',
                    username: '',
                    email: '',
                    role: '',
                    status: 'active',
                };

                updateTable();
            }

            function sortUsers(users: User[]) {
                return users.sort((a, b) => {
                    let valueA: any, valueB: any;

                    switch (currentSort.by) {
                        case 'id':
                            valueA = a.userId || a.id || '';
                            valueB = b.userId || b.id || '';
                            const numA = Number(valueA);
                            const numB = Number(valueB);
                            valueA = isNaN(numA) ? valueA.toString().toLowerCase() : numA;
                            valueB = isNaN(numB) ? valueB.toString().toLowerCase() : numB;
                            break;
                        case 'username':
                            valueA = a.username || a.name || '';
                            valueB = b.username || b.name || '';
                            valueA = valueA.toString().toLowerCase();
                            valueB = valueB.toString().toLowerCase();
                            break;
                        case 'email':
                            valueA = a.email || '';
                            valueB = b.email || '';
                            valueA = valueA.toString().toLowerCase();
                            valueB = valueB.toString().toLowerCase();
                            break;
                        case 'role':
                            valueA = a.userType?.name || a.role || '';
                            valueB = b.userType?.name || b.role || '';
                            valueA = valueA.toString().toLowerCase();
                            valueB = valueB.toString().toLowerCase();
                            break;
                        case 'status':
                            valueA = (a.active !== false) ? 1 : 0;
                            valueB = (b.active !== false) ? 1 : 0;
                            break;
                        default:
                            valueA = a.userId || a.id || '';
                            valueB = b.userId || b.id || '';
                    }

                    if (currentSort.order === 'asc') {
                        return valueA < valueB ? -1 : valueA > valueB ? 1 : 0;
                    } else {
                        return valueA > valueB ? -1 : valueA < valueB ? 1 : 0;
                    }
                });
            }

            function updateTable() {
                if (!tableBody) {
                    console.error('No se encontró el elemento usersTableBody');
                    return;
                }

                if (!allUsers.length) {
                    console.log('No hay datos de usuarios para mostrar');
                    tableBody.innerHTML = '<tr><td colspan="5" class="text-center">No hay datos disponibles</td></tr>';
                    return;
                }

                console.log('Filtros aplicados:', currentFilters);
                console.log('Ordenamiento aplicado:', currentSort);
                console.log('Mostrar inactivos:', showInactive);

                let filteredUsers = allUsers.filter(user => {
                    // Filtro por estado (activo/inactivo)
                    if (!showInactive && user.active === false) {
                        return false;
                    }

                    if (currentFilters.status === 'active' && user.active === false) {
                        return false;
                    }
                    if (currentFilters.status === 'inactive' && user.active !== false) {
                        return false;
                    }

                    // Filtro por ID
                    if (currentFilters.id) {
                        const userId = (user.userId || user.id || '').toString().toLowerCase();
                        if (!userId.includes(currentFilters.id)) {
                            return false;
                        }
                    }

                    // Filtro por usuario
                    if (currentFilters.username && (user.username || user.name)) {
                        const userName = (user.username || user.name || '').toLowerCase();
                        if (!userName.includes(currentFilters.username)) {
                            return false;
                        }
                    }

                    // Filtro por correo
                    if (currentFilters.email && user.email) {
                        const userEmail = user.email.toLowerCase();
                        if (!userEmail.includes(currentFilters.email)) {
                            return false;
                        }
                    }

                    // Filtro por rol
                    if (currentFilters.role && user.userTypeId) {
                        if (user.userTypeId !== currentFilters.role) {
                            return false;
                        }
                    }

                    return true;
                });

                filteredUsers = sortUsers(filteredUsers);

                currentFilteredUsers = filteredUsers;
                console.log('Usuarios filtrados guardados:', currentFilteredUsers.length);

                if (filteredUsers.length === 0) {
                    tableBody.innerHTML = `
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                <div class="text-muted">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                                    </svg>
                                    <p class="mt-2 mb-0">No se encontraron usuarios</p>
                                    <small>Intenta con otros criterios de búsqueda</small>
                                </div>
                            </td>
                        </tr>
                    `;
                } else {
                    tableBody.innerHTML = filteredUsers.map(user => `
                        <tr data-user-id="${user.userId || user.id || 'N/A'}">
                            <th scope="row">${user.userId || user.id || 'N/A'}</th>
                            <td>${user.username || user.name || ''}</td>
                            <td>${user.email || ''}</td>
                            <td>${user.userType?.name || user.role || ''}</td>
                            <td>
                                <span class="badge ${(user.active !== false) ? 'bg-success' : 'bg-danger'}">
                                    ${(user.active !== false) ? 'Activo' : 'Inactivo'}
                                </span>
                            </td>
                        </tr>
                    `).join('');
                }
            }

            // Configurar event listeners para filtros y ordenamiento
            if (applyFiltersBtn) {
                applyFiltersBtn.addEventListener('click', applyAdvancedFilters);
            }

            if (clearFiltersBtn) {
                clearFiltersBtn.addEventListener('click', clearAllFilters);
            }

            if (filterButton) {
                filterButton.addEventListener('click', toggleFiltersAccordion);
            }

            if (sortButton) {
                sortButton.addEventListener('click', toggleSortDropdown);
            }

            const sortOptions = document.querySelectorAll('.sort-option');
            sortOptions.forEach(option => {
                option.addEventListener('click', function(this: HTMLElement) {
                    const sortBy = this.getAttribute('data-sort-by');
                    const sortOrder = this.getAttribute('data-sort-order');
                    if (sortBy && sortOrder) {
                        applySort(sortBy, sortOrder);
                    }
                });
            });

            const quickSearchInputs = [
                searchId, searchUsername, searchEmail, searchRole, searchStatus
            ];
            quickSearchInputs.forEach(input => {
                if (input) {
                    input.addEventListener('input', applyQuickSearch);
                    input.addEventListener('change', applyQuickSearch);
                }
            });

            const advancedFilterInputs = [
                filterId, filterUsername, filterEmail, filterRole, filterStatus
            ];
            advancedFilterInputs.forEach(input => {
                if (input) {
                    input.addEventListener('keypress', function(e) {
                        if ((e as KeyboardEvent).key === 'Enter') {
                            applyAdvancedFilters();
                        }
                    });
                }
            });

            document.addEventListener('click', function(event: MouseEvent) {
                const target = event.target as Node;
                if (isSortVisible && sortButton && !sortButton.contains(target) && sortDropdown && !sortDropdown.contains(target)) {
                    toggleSortDropdown();
                }
                if (isFiltersVisible && filterButton && !filterButton.contains(target) && filtersAccordion && !filtersAccordion.contains(target)) {
                    toggleFiltersAccordion();
                }
            });

            updateTable();
            console.log('Sistema de planilla inicializado correctamente');
        });

        window.addEventListener('load', function() {
            console.log('Ventana cargada, verificando navegación de administración...');
            setTimeout(setupLeftBarNavigation, 300);
        });
    </script>
