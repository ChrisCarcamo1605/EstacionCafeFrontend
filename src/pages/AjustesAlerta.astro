---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <Navbar/>

    <div class="container-fluid bg-white p-0" style="height: calc(100vh - 56px); overflow: hidden;">
        <div class="row g-0 h-100 bg-white m-0">
            
            <div class="col-md-2 bg-white p-0 h-100">
                <div class="h-100 d-flex flex-column">
                    <div class="card border-0 shadow-sm h-100 rounded-0">
                        <div class="card-header bg-white border-0 py-1">
                            <div class="d-flex align-items-center">
                                <span class="fs-4 me-2 text-muted">←</span>
                                <h1 class="small mb-0 fw-normal">Volver</h1>
                            </div>
                        </div>
                        <div class="card-body p-0 d-flex flex-column">
                            <div class="p-3">
                                <h2 class="h3 mb-0 text-center">Ajustes</h2>
                            </div>
                            <div class="p-0">
                                <div class="small mb-0 fw-normal text-center p-2 rounded-0" style="background-color: #F3DCBB;">General</div>
                                <div class="small mb-0 fw-normal text-center p-2">Alertas</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        
            <div class="col-md-10 bg-white p-0 h-100">
                <div class="h-100 d-flex flex-column">
                    <div class="card border-0 shadow-sm h-100 rounded-0">
                        <div class="card-header bg-white border-0 py-1">
                            <h2 class="h6 mb-0 fw-bold" style="font-family: Arial, sans-serif;">General</h2>
                        </div>
                        <br>

                        <div class="card-body py-3 px-5">
                           
                            <div class="mb-3">
                                <label class="form-label small fw-bold mb-0" style="font-size: 0.75rem; letter-spacing: -0.2px; line-height: 1;">Correo para alertas y reportes</label>
                                <input type="email" class="form-control form-control-sm mt-1" style="font-size: 0.8rem; padding: 0.35rem 0.5rem; max-width: 300px;" value="correoparareportes@gmail.com" />
                            </div>

                           
                            <div class="mb-3">
                                <label class="form-label small fw-bold mb-0" style="font-size: 0.75rem; letter-spacing: -0.2px; line-height: 1;">Porcentaje límite de inventario para alertas</label>
                                <input type="text" class="form-control form-control-sm mt-1" style="width: 85px; font-size: 0.8rem; padding: 0.35rem 0.5rem;" value="25%" />
                            </div>

                            
                            <div class="mb-3">
                                <label class="form-label small fw-bold mb-0" style="font-size: 0.75rem; letter-spacing: -0.2px; line-height: 1;">Periodo de Alertas</label>
                                <div class="d-flex flex-column gap-2 mt-1" style="max-width: 200px;">
                                    <span class="badge bg-light border text-dark d-flex justify-content-between align-items-center px-3 py-1" style="font-size: 0.7rem; font-weight: normal;">
                                        <span>Cada 2 días</span>
                                        <button type="button" class="btn-close btn-close-sm ms-1" style="transform: scale(0.8);" aria-label="Cerrar"></button>
                                    </span>
                                    <span class="badge bg-light border text-dark d-flex justify-content-between align-items-center px-3 py-1" style="font-size: 0.7rem; font-weight: normal;">
                                        <span>Semanal</span>
                                        <button type="button" class="btn-close btn-close-sm ms-1" style="transform: scale(0.8);" aria-label="Cerrar"></button>
                                    </span>
                                    <span class="badge bg-light border text-dark d-flex justify-content-between align-items-center px-3 py-1" style="font-size: 0.7rem; font-weight: normal;">
                                        <span>Cada 4 días</span>
                                        <button type="button" class="btn-close btn-close-sm ms-1" style="transform: scale(0.8);" aria-label="Cerrar"></button>
                                    </span>
                                    <span class="badge bg-light border text-dark d-flex justify-content-between align-items-center px-3 py-1" style="font-size: 0.7rem; font-weight: normal;">
                                        <span>Seleccione un periodo</span>
                                        <button type="button" class="btn-close btn-close-sm ms-1" style="transform: scale(0.8);" aria-label="Cerrar"></button>
                                    </span>
                                </div>
                            </div>

                            
                            <div class="mt-2">
                                <button class="btn btn-sm fw-bold px-3 py-1" style="background-color: #E6E6E6; border-color: #E6E6E6; color: #000; font-size: 0.75rem;">
                                    Guardar Cambios
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
