---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import LeftBar from "../components/LeftBar.astro";

const options:string[] = ['General','Alertas']

---

<Layout>
  <Navbar/>

  <div class="container-fluid bg-white p-0" style="height: calc(100vh - 56px); overflow: hidden; font-family: 'Poppins', sans-serif;">
    <div class="row g-0 h-100 bg-white m-0">
      
     <LeftBar title="Ajustes" options={options} ></LeftBar>

      <!-- Contenido principal -->
      <div class="col-md-10 bg-white p-0 h-100">
        <div class="h-100 d-flex flex-column">
          <div class="card border-0 h-100 rounded-0">

            <!-- Título -->
            <div class="card-header bg-white border-0 py-2">
              <h2 class="h6 mb-0 fw-bold">General</h2>
            </div>

            <div class="card-body py-3 px-5">

              <!-- Campo de correo -->
              <div class="mb-3">
                <label class="form-label small fw-bold mb-1">Correo para alertas y reportes</label>
                <input 
                  type="email" 
                  class="form-control form-control-sm shadow-sm border-light" 
                  placeholder="correo@ejemplo.com" 
                  style="max-width: 300px;"
                  value="correoparareportes@gmail.com"
                >
              </div>

              <!-- Campo porcentaje -->
              <div class="mb-3">
                <label class="form-label small fw-bold mb-1">Porcentaje límite de inventario para alertas</label>
                <input 
                  type="text" 
                  class="form-control form-control-sm shadow-sm border-light" 
                  style="max-width: 100px;" 
                  value="25%"
                >
              </div>

              <!-- Campo periodo -->
              <div class="mb-3">
                <label class="form-label small fw-bold mb-1">Periodo de Alertas</label>
                <div class="d-flex flex-column gap-2 mt-1" style="max-width: 220px;">
                  <span class="badge bg-white border shadow-sm d-flex justify-content-between align-items-center px-3 py-2 w-100 text-dark">
                    <span>Cada 2 días</span>
                    <button type="button" class="btn-close btn-close-sm" aria-label="Cerrar"></button>
                  </span>
                  <span class="badge bg-white border shadow-sm d-flex justify-content-between align-items-center px-3 py-2 w-100 text-dark">
                    <span>Semanal</span>
                    <button type="button" class="btn-close btn-close-sm" aria-label="Cerrar"></button>
                  </span>
                  <span class="badge bg-white border shadow-sm d-flex justify-content-between align-items-center px-3 py-2 w-100 text-dark">
                    <span>Cada 4 días</span>
                    <button type="button" class="btn-close btn-close-sm" aria-label="Cerrar"></button>
                  </span>
                  <span class="badge bg-white border shadow-sm d-flex justify-content-between align-items-center px-3 py-2 w-100 text-dark">
                    <span>Seleccione un periodo</span>
                    <button type="button" class="btn-close btn-close-sm" aria-label="Cerrar"></button>
                  </span>
                </div>
              </div>

              <!-- Botón guardar -->
              <button class="btn btn-sm fw-bold px-3 py-1 shadow-sm" style="background-color: #E6E6E6; color: #000;">
                Guardar Cambios
              </button>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
