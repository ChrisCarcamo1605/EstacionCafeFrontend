---
import EstacionCafeLogoWhite from "../../public/EstacionCafeWhite.png";

const user = "Christian Geovanni Cárcamo";
---

<nav class="navbar fourth_color p-0" data-bs-theme="dark">
  <div class="container-fluid px-5">
    <div class="w-25">
      <img class="w-50 p-2 object-fit-contain" src={EstacionCafeLogoWhite.src} />
    </div>

    <div class="d-flex align-items-center flex-row gap-3">
      <div>
        <div class="dropdown">
          <button
            class="btn btn-secondary fourth_color border-0 d-flex  align-self-center"
            type="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <div  class="align-items-center">
              <span class="text-light  fw-semibold">{user}</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 22 22"
                ><circle cx="12" cy="6" r="4" fill="#fff"></circle><path
                  fill="#fff"
                  d="M20 17.5c0 2.485 0 4.5-8 4.5s-8-2.015-8-4.5S7.582 13 12 13s8 2.015 8 4.5"
                ></path></svg
              >
            </div>
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Action</a></li>
            <li><a class="dropdown-item" href="#">Another action</a></li>
            <li><a class="dropdown-item" href="#">Something else here</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <style>
  .navbar.bg-dark {
    background-color: #000000 !important;
  }
  
  /* Opcional: Si quieres que el cuarto_color también sea negro */
  .fourth_color {
    background-color: #000000 !important;
  }
</style>
