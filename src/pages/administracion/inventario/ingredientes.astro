                                        <label class="form-label fw-bold mb-2" style="font-family: 'Roboto', sans-serif;">Cantidad</label>
                                        <input type="number" step="0.01" class="form-control search-input" id="searchQuantity" style="font-family: 'Roboto', sans-serif; border-radius: 8px;" />
                                    </div>
                                </div>

                                <div class="d-flex gap-4">
                                    <div class="flex-grow-1">
                                        <label class="form-label fw-bold mb-2" style="font-family: 'Roboto', sans-serif;">Consumible</label>
                                        <select class="form-select search-input" id="searchConsumable" style="font-family: 'Roboto', sans-serif; border-radius: 8px;">
                                            <option value="">Seleccionar</option>
                                            {consumablesData.map((consumable: any) => (
                                                    <option value={consumable.consumableId || consumable.id}>{consumable.name || 'N/A'}</option>
                                            ))}
                                        </select>
                                    </div>

                                    <div class="flex-grow-1">
