---
export const prerender = false;
import Layout from "../../../layouts/Layout.astro";
import Navbar from "../../../components/Navbar.astro";
import LeftBar from "../../../components/LeftBar.astro";

const sidebarOptions = ["Consumibles", "Productos", "Ingredientes", "Proveedores"];

// Fetch de datos de ingredientes
const response = await fetch("http://localhost:3484/api/ingredient", {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
    },
});

// Fetch de datos de consumibles para los selects
const consumablesResponse = await fetch("http://localhost:3484/api/consumable", {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
    },
});

// Fetch de datos de productos para los selects
const productsResponse = await fetch("http://localhost:3484/api/products", {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
    },
});

let ingredientsData = null;
let consumablesData = [];
let productsData = [];

if (response.ok) {
    const result = await response.json();
    ingredientsData = result.data || result;
    console.log('Datos de ingredientes:', ingredientsData);
} else {
    console.error("Error fetching ingredients data:", response.statusText);
}

if (consumablesResponse.ok) {
    const result = await consumablesResponse.json();
    consumablesData = result.data || result;
    console.log('Datos de consumibles:', consumablesData);
} else {
    console.error("Error fetching consumables data:", consumablesResponse.statusText);
}

if (productsResponse.ok) {
    const result = await productsResponse.json();
    productsData = result.data || result;
    console.log('Datos de productos:', productsData);
} else {
    console.error("Error fetching products data:", productsResponse.statusText);
}

const initialIngredients = ingredientsData || [];
---

<Layout>
    <div class="d-flex flex-column" style="min-height: 100vh;">
        <Navbar />

        <div class="d-flex flex-grow-1" style="min-height: calc(100vh - 56px);"> <!-- Ajuste para altura completa -->
            <LeftBar title="Inventario" options={sidebarOptions} selectedOption="Ingredientes" />

            <div class="main-content-with-navbar-sidebar flex-grow-1" style="background-color: #f8f9fa; font-family: 'Roboto', sans-serif; position: relative; min-height: 100%;">
                <div class="p-4">
                    <!-- BOTONES EN LA ESQUINA SUPERIOR DERECHA (no fijos) -->
                    <div class="position-absolute" style="top: 100px; right: 20px; z-index: 10;">
                        <div class="d-flex flex-column gap-1">
                            <button
                                    class="btn d-flex align-items-center justify-content-center gap-2"
                                    style="font-family: 'Roboto', sans-serif; border-radius: 8px; background-color: #482E21; color: white; border: 1px solid #482E21; width: 257px; height: 50px; font-size: 1.1rem;"
                                    id="addIngredientBtn"
                            >
