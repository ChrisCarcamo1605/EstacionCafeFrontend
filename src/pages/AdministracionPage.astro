---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
const options = ["Inventario", "Estadísticas", "Usuarios", "Gastos", "Ajustes"];
---

<Layout>
    <Navbar />

    <!-- PADDING AJUSTADO: menos padding arriba para subir el botón -->
    <div class="container-fluid bg-light" style="min-height: calc(100vh - 50px); padding: 20px 50px 50px 50px;">
        <!-- Botón Volver - MÁS GRANDE -->
        <div class="mb-3">
            <button class="btn btn-link text-dark text-decoration-none p-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                    <path fill="currentColor" d="m4 10l-.707.707L2.586 10l.707-.707zm17 8a1 1 0 1 1-2 0zM8.293 15.707l-5-5l1.414-1.414l5 5zm-5-6.414l5-5l1.414 1.414l-5 5zM4 9h10v2H4zm17 7v2h-2v-2zm-7-7a7 7 0 0 1 7 7h-2a5 5 0 0 0-5-5z"></path>
                </svg>
                <span class="ms-2 fw-medium" style="font-size: 1.1rem;">Volver</span>
            </button>
        </div>

        <!-- Grid de tarjetas - ALTURA AJUSTADA PARA EVITAR SCROLL -->
        <div class="row g-2" style="height: calc(100vh - 150px);">
            <!-- Columna izquierda: Inventario -->
            <div class="col-md-4" style="height: 100%;">
                <div class="card shadow border-0 admin-card h-100">
                    <div style="position: relative; height: 100%;">
                        <img
                                src="/inventario.jpg"
                                class="card-img"
                                alt="Inventario"
                                style="height: 100%; width: 100%; object-fit: cover; filter: brightness(0.3);"
                        >
                        <div class="card-overlay">
                            <h3 class="card-title-overlay">Inventario</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Columna central: Estadísticas -->
            <div class="col-md-4" style="height: 100%;">
                <div class="card shadow border-0 admin-card h-100">
                    <div style="position: relative; height: 100%;">
                        <img
                                src="/estadisticas.jpg"
                                class="card-img"
                                alt="Estadísticas"
                                style="height: 100%; width: 100%; object-fit: cover; filter: brightness(0.3);"
                        >
                        <div class="card-overlay">
                            <h3 class="card-title-overlay">Estadísticas</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Columna derecha: Usuarios, Gastos y Ajustes -->
            <div class="col-md-4" style="height: 100%;">
                <div class="row g-2 h-100">
                    <!-- Usuarios (arriba) -->
                    <div class="col-12" style="height: calc(33.33% - 5px);">
                        <div class="card shadow border-0 admin-card h-100">
                            <div style="position: relative; height: 100%;">
                                <img
                                        src="/usuarios.jpg"
                                        class="card-img"
                                        alt="Usuarios"
                                        style="height: 100%; width: 100%; object-fit: cover; filter: brightness(0.3);"
                                >
                                <div class="card-overlay">
                                    <h3 class="card-title-overlay">Usuarios</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Gastos (medio) -->
                    <div class="col-12" style="height: calc(33.33% - 5px);">
                        <div class="card shadow border-0 admin-card h-100">
                            <div style="position: relative; height: 100%;">
                                <img
                                        src="/gastos.jpg"
                                        class="card-img"
                                        alt="Gastos"
                                        style="height: 100%; width: 100%; object-fit: cover; filter: brightness(0.3);"
                                >
                                <div class="card-overlay">
                                    <h3 class="card-title-overlay">Gastos</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Ajustes (abajo) -->
                    <div class="col-12" style="height: calc(33.33% - 5px);">
                        <div class="card shadow border-0 admin-card h-100" style="background-color: #000;">
                            <div style="position: relative; height: 100%; background-color: #000; display: flex; align-items: center; justify-content: center;">
                                <div class="text-center" style="color: white;">
                                    <h3 class="card-title-overlay">Ajustes</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<!-- Importar íconos de Bootstrap -->
<link
        href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
        rel="stylesheet"
/>

<style>
    .admin-card {
        cursor: pointer;
        transition: transform 0.2s;
        overflow: hidden;
        border-radius: 8px;
    }

    .admin-card:hover {
        transform: translateY(-3px);
    }

    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        padding: 0.5rem;
    }

    .card-title-overlay {
        font-family: "Pattaya", sans-serif;
        font-weight: 400;
        font-size: 2.5rem;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
        color: #F3DCBB;
    }

    @media (max-width: 768px) {
        .card-title-overlay {
            font-size: 1.8rem;
        }
    }

    @media (max-width: 576px) {
        .card-title-overlay {
            font-size: 1.5rem;
        }
    }
</style>