---
export const prerender = false;
import Layout from "../../../layouts/Layout.astro";
import LeftSidebar from "../../../components/LeftBar.astro";
import Navbar from "../../../components/Navbar.astro";
import "../../../styles/style.css";
import { BACKEND_API_URL, EMAIL_SERVICE_URL } from "../../../config/api";

const estadisticasRouteMap: Record<string, string> = {
    "Estadisticas de Ventas": "/administracion/estadisticas/estadisticas-ventas",
    "Estadisticas de Gastos": "/administracion/estadisticas/estadisticas-gastos",
    "Reporte de Ventas": "/administracion/estadisticas/reporte-ventas"
};

const jsonData = {
    data: [
        { billId: "FAC-001", customer: "Cliente Regular", date: "2024-01-15T10:30:00", cashRegister: { number: "CAJA-001" }, total: "125.50" },
        { billId: "FAC-002", customer: "Maria Gonzalez", date: "2024-01-15T11:15:00", cashRegister: { number: "CAJA-002" }, total: "89.75" },
        { billId: "FAC-003", customer: "Juan Perez", date: "2024-01-16T09:45:00", cashRegister: { number: "CAJA-001" }, total: "156.20" },
        { billId: "FAC-004", customer: "Cliente Corporativo", date: "2024-01-16T14:20:00", cashRegister: { number: "CAJA-003" }, total: "203.40" },
        { billId: "FAC-005", customer: "Ana Lopez", date: "2024-01-17T08:30:00", cashRegister: { number: "CAJA-002" }, total: "78.90" },
        { billId: "FAC-006", customer: "Carlos Rodriguez", date: "2024-01-17T12:45:00", cashRegister: { number: "CAJA-001" }, total: "145.60" },
        { billId: "FAC-007", customer: "Restaurante El Sabor", date: "2024-01-18T16:15:00", cashRegister: { number: "CAJA-003" }, total: "189.30" },
        { billId: "FAC-008", customer: "Cliente Ocasional", date: "2024-01-18T18:30:00", cashRegister: { number: "CAJA-002" }, total: "95.25" },
        { billId: "FAC-009", customer: "Empresa XYZ", date: "2024-01-19T10:00:00", cashRegister: { number: "CAJA-001" }, total: "167.80" },
        { billId: "FAC-010", customer: "Laura Martinez", date: "2024-01-19T13:20:00", cashRegister: { number: "CAJA-003" }, total: "134.45" }
    ]
};

let facturas: any[] = [];

if (jsonData && jsonData.data) {
    facturas = jsonData.data.map((factura) => {
        return {
            ...factura,
            total: parseFloat(factura.total) || 0
        };
    });
}

const formatDate = (dateString: string) => {
    try {
        const date = new Date(dateString);
        if (isNaN(date.getTime())) {
            return 'Fecha inválida';
        }
        return date.toLocaleDateString('es-ES');
    } catch (error) {
        return 'Error fecha';
    }
};

const getDayOfWeek = (dateString: string) => {
    try {
        const date = new Date(dateString);
        if (isNaN(date.getTime())) {
            return 'Día inválido';
        }
        const days = ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'];
        return days[date.getDay()];
    } catch (error) {
        return 'Error día';
    }
};

const getTime = (dateString: string) => {
    try {
        const date = new Date(dateString);
        if (isNaN(date.getTime())) {
            return 'Hora inválida';
        }
        return date.toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit' });
    } catch (error) {
        return 'Error hora';
    }
};
---

<Layout title="Reportes de Ventas - Estación Café">
    <Navbar />
    
    <div class="d-flex">
        <LeftSidebar 
            title="Resumen" 
            options={["Estadisticas de Ventas", "Estadisticas de Gastos", "Reporte de Ventas"]}
            selectedOption="Reporte de Ventas"
            routeMap={estadisticasRouteMap}
        />
        
        <div class="flex-grow-1 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0" style="color: #482E21;">Reportes de Ventas</h2>
                <div class="text-muted small">
                    Total de ventas: {facturas.length}
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-5">
                    <div class="form-group">
                        <label for="fechaDesde" class="form-label fw-semibold" style="color: #482E21;">Fecha Desde</label>
                        <input type="date" class="form-control" id="fechaDesde" disabled />
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label for="fechaHasta" class="form-label fw-semibold" style="color: #482E21;">Fecha Hasta</label>
                        <input type="date" class="form-control" id="fechaHasta" disabled />
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button id="generarReporte" class="btn text-white w-100" style="background-color: #482E21; border-color: #482E21;" disabled>
                        Generar Reporte
                    </button>
                </div>
            </div>



            <div class="mt-5">
                <div class="card shadow-sm border-0" style="border-radius: 8px;">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table" id="tablaReportes">
                                <thead style="background-color: #482E21; color: white;">
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Cliente</th>
                                        <th scope="col">Fecha</th>
                                        <th scope="col">Día</th>
                                        <th scope="col">Hora</th>
                                        <th scope="col">Caja</th>
                                        <th scope="col">Total</th>
                                        <th scope="col">Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {facturas.length > 0 ? (
                                        facturas.map((factura: any) => {
                                            const fechaFormateada = formatDate(factura.date);
                                            const diaSemana = getDayOfWeek(factura.date);
                                            const hora = getTime(factura.date);
                                            
                                            return (
                                                <tr>
                                                    <th scope="row">{factura.billId}</th>
                                                    <td>{factura.customer}</td>
                                                    <td>{fechaFormateada}</td>
                                                    <td>{diaSemana}</td>
                                                    <td>{hora}</td>
                                                    <td>{factura.cashRegister?.number || 'CAJA-001'}</td>
                                                    <td>${factura.total.toFixed(2)}</td>
                                                    <td></td>
                                                </tr>
                                            );
                                        })
                                    ) : (
                                        <tr>
                                            <td colspan="8" class="text-center py-4 text-muted">
                                                No hay datos disponibles para mostrar
                                            </td>
                                        </tr>
                                    )}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
    const routeMap = {
        "Estadisticas de Ventas": "http://localhost:4321/administracion/estadisticas/estadisticas-ventas",
        "Estadisticas de Gastos": "http://localhost:4321/administracion/estadisticas/estadisticas-gastos", 
        "Reporte de Ventas": "http://localhost:4321/administracion/estadisticas/reporte-ventas"
    };

    function setupLeftBarNavigation() {
        const sidebarItems = document.querySelectorAll('.sidebar-item, .nav-link, .list-group-item, [class*="option"], [class*="item"]');
        sidebarItems.forEach(item => {
            const text = item.textContent?.trim();
            if (text && text in routeMap) {
                (item as HTMLElement).style.cursor = 'pointer';
                item.addEventListener('click', () => {
                    window.location.href = routeMap[text as keyof typeof routeMap];
                });
            }
        });
    }

    document.addEventListener('DOMContentLoaded', function() {
        setupLeftBarNavigation();
    });
    </script>
</Layout>

<style is:global>
    .table th {
        font-weight: 600;
        font-size: 0.875rem;
        padding: 12px 16px;
    }

    .table td {
        padding: 12px 16px;
        vertical-align: middle;
    }

    .card {
        border-radius: 8px;
    }

    .btn {
        border-radius: 8px;
    }

    .table tbody tr {
        background-color: white;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table-responsive {
        border-radius: 8px;
        overflow: hidden;
    }

    [class*="sidebar"] [class*="item"],
    [class*="nav"] [class*="link"],
    [class*="list"] [class*="item"] {
        transition: background-color 0.2s ease;
    }
</style>