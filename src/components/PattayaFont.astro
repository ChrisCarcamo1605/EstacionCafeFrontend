---
interface Props {
  as?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
  size?: 'display' | 'title' | 'subtitle';
  class?: string;
}

const { as = 'h2', size = 'title', class: className = '' } = Astro.props;
---

<Fragment set:html={`
  <${as} class="pattaya-${size} ${className}">
    <slot />
  </${as}>
`} />

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Pattaya&display=swap" rel="stylesheet">

<style>
  .pattaya-display {
    font-family: 'Pattaya', serif;
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1rem;
  }
  
  .pattaya-title {
    font-family: 'Pattaya', serif;
    font-size: 2rem;
    line-height: 1.3;
    margin-bottom: 0.75rem;
  }
  
  .pattaya-subtitle {
    font-family: 'Pattaya', serif;
    font-size: 1.5rem;
    line-height: 1.4;
    margin-bottom: 0.5rem;
  }
</style>