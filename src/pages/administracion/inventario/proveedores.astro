                                                <label class="form-label fw-semibold">Nombre</label>
                                                <input 
                                                    type="text" 
                                                    class="form-control filter-input" 
                                                    id="filterName"
                                                    placeholder="Buscar por nombre"
                                                />
                                            </div>
                                            
                                            <div class="col-md-4">
                                                <label class="form-label fw-semibold">Teléfono</label>
                                                <input 
                                                    type="text" 
                                                    class="form-control filter-input" 
                                                    id="filterPhone"
                                                    placeholder="Buscar por teléfono"
                                                />
                                            </div>
                                            
                                            <div class="col-md-4">
                                                <label class="form-label fw-semibold">Email</label>
                                                <input 
                                                    type="text" 
                                                    class="form-control filter-input" 
                                                    id="filterEmail"
                                                    placeholder="Buscar por email"
                                                />
                                            </div>
                                            
                                            <div class="col-md-4">
                                                <label class="form-label fw-semibold">Mostrar</label>
                                                <select class="form-select filter-input" id="filterStatus">
                                                    <option value="active">Solo activos</option>
                                                    <option value="inactive">Solo inactivos</option>
                                                    <option value="">Todos los estados</option>
                                                </select>
                                            </div>
                                            
                                            <div class="col-md-4 d-flex align-items-end gap-2">
                                                <button 
                                                    class="btn btn-primary flex-grow-1" 
                                                    id="applyFilters"
                                                    style="background-color: #482E21; border-color: #482E21;"
                                                >
                                                    Aplicar Filtros
                                                </button>
                                                <button 
                                                    class="btn btn-outline-secondary" 
                                                    id="clearFilters"
                                                >
                                                    Limpiar
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- TABLA -->
                        <div class="mt-5">
                            <div class="card shadow-sm border-0" style="border-radius: 8px;">
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-hover mb-0">
                                            <thead style="background-color: #482E21; color: white;">
                                                <tr>
                                                    <th scope="col" style="width: 15%;">ID</th>
                                                    <th scope="col" style="width: 25%;">Nombre</th>
                                                    <th scope="col" style="width: 20%;">Teléfono</th>
                                                    <th scope="col" style="width: 25%;">Email</th>
                                                    <th scope="col" style="width: 15%;">Estado</th>
                                                </tr>
                                            </thead>
                                            <tbody id="suppliersTableBody">
                                                {initialSuppliers.length > 0 ? (
                                                    initialSuppliers
                                                        .filter((supplier: any) => supplier.active)
                                                        .map((supplier: any) => (
                                                            <tr data-supplier-id={supplier.supplierId}>
                                                                <th scope="row">{supplier.supplierId || 'N/A'}</th>
                                                                <td>{supplier.name || ''}</td>
                                                                <td>{supplier.phone || ''}</td>
                                                                <td>{supplier.email || ''}</td>
                                                                <td>
                                                                    <span class={`badge ${supplier.active ? 'bg-success' : 'bg-danger'}`}>
                                                                        {supplier.active ? 'Activo' : 'Inactivo'}
                                                                    </span>
                                                                </td>
                                                            </tr>
                                                        ))
                                                ) : (
                                                    <tr>
                                                        <td colspan="5" class="text-center py-4">
                                                            <div class="text-muted">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-inbox" viewBox="0 0 16 16">
                                                                    <path d="M4.98 4a.5.5 0 0 0-.39.188L1.54 8H6a.5.5 0 0 1 .5.5 1.5 1.5 0 1 0 3 0A.5.5 0 0 1 10 8h4.46l-3.05-3.812A.5.5 0 0 0 11.02 4H4.98zm-1.17-.437A1.5 1.5 0 0 1 4.98 3h6.04a1.5 1.5 0 0 1 1.17.563l3.7 4.625a.5.5 0 0 1 .106.374l-.39 3.124A1.5 1.5 0 0 1 14.117 13H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .106-.374l3.7-4.625z"/>
                                                                </svg>
                                                                <p class="mt-2 mb-0">No hay datos disponibles</p>
                                                                <small>Verifica que el endpoint esté funcionando correctamente</small>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                )}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- El resto del código permanece igual -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <div 
        id="initial-suppliers-data" 
        data-suppliers={JSON.stringify(initialSuppliers)}
        style="display: none;"
    ></div>

    <script>
        const routeMap = {
            "Consumibles": "http://localhost:4321/administracion/inventario/consumibles",
            "Productos": "http://localhost:4321/administracion/inventario/productos", 
            "Ingredientes": "http://localhost:4321/administracion/inventario/ingredientes",
            "Proveedores": "http://localhost:4321/administracion/inventario/proveedores"
        };

        function setupLeftBarNavigation() {
            console.log('Configurando navegación del LeftBar para Inventario...');
            
            setTimeout(() => {
                const options = ["Consumibles", "Productos", "Ingredientes", "Proveedores"];
                
                options.forEach(optionText => {
                    const elements = document.querySelectorAll('*');
                    elements.forEach(element => {
                        if (element.textContent?.trim() === optionText && routeMap[optionText as keyof typeof routeMap]) {
                            if (!element.hasAttribute('data-nav-configured')) {
                                (element as HTMLElement).style.cursor = 'pointer';
                                element.setAttribute('data-nav-configured', 'true');
                                
                                element.addEventListener('click', (e) => {
                                    e.preventDefault();
                                    e.stopPropagation();
                                    const route = routeMap[optionText as keyof typeof routeMap];
                                    console.log('Navegando a:', route);
                                    window.location.href = route;
                                });
                                
                                element.addEventListener('mouseenter', () => {
                                    (element as HTMLElement).style.backgroundColor = '#f8f9fa';
                                    (element as HTMLElement).style.transition = 'background-color 0.2s';
                                });
                                element.addEventListener('mouseleave', () => {
                                    (element as HTMLElement).style.backgroundColor = '';
                                });
                                
                                console.log('Configurado elemento para:', optionText);
                            }
                        }
                    });
                });
            }, 100);

            setTimeout(() => {
                const sidebarSelectors = [
                    '.sidebar-item',
                    '.nav-link', 
                    '.list-group-item',
                    '[class*="option"]',
                    '[class*="item"]',
                    'a',
                    'button',
                    'div'
                ];
                
                sidebarSelectors.forEach(selector => {
                    const elements = document.querySelectorAll(selector);
                    elements.forEach(element => {
                        const text = element.textContent?.trim();
                        if (text && text in routeMap) {
                            if (!element.hasAttribute('data-nav-configured')) {
                                (element as HTMLElement).style.cursor = 'pointer';
                                element.setAttribute('data-nav-configured', 'true');
                                element.addEventListener('click', () => {
                                    const route = routeMap[text as keyof typeof routeMap];
                                    console.log('Navegando a:', route);
                                    window.location.href = route;
                                });
                                
                                element.addEventListener('mouseenter', () => {
                                    (element as HTMLElement).style.backgroundColor = '#f8f9fa';
                                });
                                element.addEventListener('mouseleave', () => {
                                    (element as HTMLElement).style.backgroundColor = '';
                                });
                            }
                        }
                    });
                });
            }, 200);
        }

        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM cargado, inicializando navegación de inventario...');
            
            setupLeftBarNavigation();
            
            setTimeout(setupLeftBarNavigation, 500);
            setTimeout(setupLeftBarNavigation, 1000);
            setTimeout(setupLeftBarNavigation, 2000);

            console.log('Inicializando funcionalidad de proveedores...');
            
            let selectedSupplierId: string | null = null;
            let allSuppliers: any[] = [];
            let currentFilteredSuppliers: any[] = [];

            const addSupplierBtn = document.getElementById('addSupplierBtn');
            const updateSupplierBtn = document.getElementById('updateSupplierBtn');
            const deleteSupplierBtn = document.getElementById('deleteSupplierBtn');
            const message = document.getElementById('message');
            const searchPhone = document.getElementById('searchPhone') as HTMLInputElement;

            if (searchPhone) {
                searchPhone.addEventListener('input', function(e) {
                    this.value = this.value.replace(/[^0-9]/g, '');
                });
            }

            async function addNewSupplier() {
                const name = (document.getElementById('searchName') as HTMLInputElement)?.value.trim();
                const phone = (document.getElementById('searchPhone') as HTMLInputElement)?.value.trim();
                const email = (document.getElementById('searchEmail') as HTMLInputElement)?.value.trim();
                const status = (document.getElementById('searchStatus') as HTMLSelectElement)?.value;

                if (!name || !phone || !email) {
                    showMessage('Por favor complete los campos Nombre, Teléfono y Email', 'error');
                    return;
                }

                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(email)) {
                    showMessage('Por favor ingrese un email válido', 'error');
                    return;
                }

                try {
                    const supplierData = {
                        name: name,
                        phone: phone,
                        email: email,
                        active: status === 'active'
                    };

                    console.log('Enviando datos para agregar:', supplierData);

                    const response = await fetch('http://localhost:3484/api/suppliers', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(supplierData)
                    });

                    if (response.ok) {
                        const result = await response.json();
                        console.log('Proveedor agregado exitosamente:', result);
                        showMessage('Proveedor agregado exitosamente', 'success');
                        clearForm();
                        setTimeout(() => {
                            location.reload();
                        }, 1500);
                    } else {
                        const errorData = await response.json();
                        console.error('Error al agregar proveedor:', errorData);
                        showMessage(`Error: ${errorData.message || 'No se pudo agregar el proveedor'}`, 'error');
                    }
                } catch (error) {
                    console.error('Error de red:', error);
                    showMessage('Error de conexión. Verifique que el servidor esté funcionando.', 'error');
                }
            }

            async function updateSupplier() {
                if (!selectedSupplierId) {
                    showMessage('Por favor seleccione un proveedor de la tabla haciendo clic en la fila', 'error');
                    return;
                }

                const name = (document.getElementById('searchName') as HTMLInputElement)?.value.trim();
                const phone = (document.getElementById('searchPhone') as HTMLInputElement)?.value.trim();
                const email = (document.getElementById('searchEmail') as HTMLInputElement)?.value.trim();
                const status = (document.getElementById('searchStatus') as HTMLSelectElement)?.value;

                if (!name || !phone || !email) {
                    showMessage('Por favor complete los campos Nombre, Teléfono y Email', 'error');
                    return;
                }

                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(email)) {
                    showMessage('Por favor ingrese un email válido', 'error');
                    return;
                }

                try {
                    const supplierData = {
                        name: name,
                        phone: phone,
                        email: email,
                        active: status === 'active'
                    };

                    console.log('Enviando datos para actualizar:', supplierData, 'ID:', selectedSupplierId);

                    const response = await fetch(`http://localhost:3484/api/suppliers/${selectedSupplierId}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(supplierData)
                    });

                    if (response.ok) {
                        const result = await response.json();
                        console.log('Proveedor actualizado exitosamente:', result);
                        showMessage('Proveedor actualizado exitosamente', 'success');
                        clearSelection();
                        clearForm();
                        setTimeout(() => {
                            location.reload();
                        }, 1500);
                    } else {
                        const errorData = await response.json();
                        console.error('Error al actualizar proveedor:', errorData);
                        showMessage(`Error: ${errorData.message || 'No se pudo actualizar el proveedor'}`, 'error');
                    }
                } catch (error) {
                    console.error('Error de red:', error);
                    showMessage('Error de conexión. Verifique que el servidor esté funcionando.', 'error');
                }
            }

            async function deleteSupplier() {
                if (!selectedSupplierId) {
                    showMessage('Por favor seleccione un proveedor de la tabla haciendo clic en la fila', 'error');
                    return;
                }

                if (!confirm('¿Está seguro de que desea eliminar este proveedor?')) {
                    return;
                }

                try {
                    console.log('Eliminando proveedor ID:', selectedSupplierId);

                    const response = await fetch(`http://localhost:3484/api/suppliers/${selectedSupplierId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    });

                    if (response.ok) {
                        console.log('Proveedor eliminado exitosamente');
                        showMessage('Proveedor eliminado exitosamente', 'success');
                        clearSelection();
                        clearForm();
                        setTimeout(() => {
                            location.reload();
                        }, 1500);
                    } else {
                        const errorData = await response.json();
                        console.error('Error al eliminar proveedor:', errorData);
                        showMessage(`Error: ${errorData.message || 'No se pudo eliminar el proveedor'}`, 'error');
                    }
                } catch (error) {
                    console.error('Error de red:', error);
                    showMessage('Error de conexión. Verifique que el servidor esté funcionando.', 'error');
                }
            }

            function showMessage(text: string | null, type: string) {
                if (!message) return;
                
                message.textContent = text;
                message.style.display = 'block';
                message.className = `alert alert-${type === 'success' ? 'success' : 'danger'} mt-3`;
                
                setTimeout(() => {
                    message.style.display = 'none';
                }, 5000);
            }

            function clearForm() {
                const idInput = document.getElementById('searchId') as HTMLInputElement;
                const nameInput = document.getElementById('searchName') as HTMLInputElement;
                const phoneInput = document.getElementById('searchPhone') as HTMLInputElement;
                const emailInput = document.getElementById('searchEmail') as HTMLInputElement;
                const statusSelect = document.getElementById('searchStatus') as HTMLSelectElement;
                
                if (idInput) idInput.value = '';
                if (nameInput) nameInput.value = '';
                if (phoneInput) phoneInput.value = '';
                if (emailInput) emailInput.value = '';
                if (statusSelect) statusSelect.value = 'active';
            }

            function clearSelection() {
                selectedSupplierId = null;
                const allRows = document.querySelectorAll('#suppliersTableBody tr');
                allRows.forEach(row => {
                    row.classList.remove('table-primary');
                });
            }

            function loadSupplierData(supplierId: any) {
                console.log('Buscando proveedor con ID:', supplierId);
                console.log('Proveedores filtrados actuales:', currentFilteredSuppliers);
                
                const supplier = currentFilteredSuppliers.find(s => {
                    console.log('Comparando:', s.supplierId, 'con', supplierId, 'tipo:', typeof s.supplierId, typeof supplierId);
                    return s.supplierId == supplierId; 
                });
                
                if (!supplier) {
                    console.error('Proveedor no encontrado con ID:', supplierId);
                    showMessage('Error: No se pudo cargar los datos del proveedor', 'error');
                    return;
                }

                console.log('Proveedor encontrado:', supplier);

                const idInput = document.getElementById('searchId') as HTMLInputElement;
                const nameInput = document.getElementById('searchName') as HTMLInputElement;
                const phoneInput = document.getElementById('searchPhone') as HTMLInputElement;
                const emailInput = document.getElementById('searchEmail') as HTMLInputElement;
                const statusSelect = document.getElementById('searchStatus') as HTMLSelectElement;
                
                if (idInput) {
                    idInput.value = supplier.supplierId || '';
                    console.log('ID input llenado:', idInput.value);
                }
                if (nameInput) {
                    nameInput.value = supplier.name || '';
                    console.log('Nombre input llenado:', nameInput.value);
                }
                if (phoneInput) {
                    phoneInput.value = supplier.phone || '';
                    console.log('Teléfono input llenado:', phoneInput.value);
                }
                if (emailInput) {
                    emailInput.value = supplier.email || '';
                    console.log('Email input llenado:', emailInput.value);
                }
                if (statusSelect) {
                    statusSelect.value = supplier.active ? 'active' : 'inactive';
                    console.log('Estado select llenado:', statusSelect.value);
                }

                console.log('Formulario llenado exitosamente para proveedor:', supplierId);
            }

            if (addSupplierBtn) {
                addSupplierBtn.addEventListener('click', addNewSupplier);
                console.log('Botón agregar configurado');
            }

            if (updateSupplierBtn) {
                updateSupplierBtn.addEventListener('click', updateSupplier);
                console.log('Botón actualizar configurado');
            }

            if (deleteSupplierBtn) {
                deleteSupplierBtn.addEventListener('click', deleteSupplier);
                console.log('Botón eliminar configurado');
            }


            let lastClickTime = 0;
            const DOUBLE_CLICK_DELAY = 300;

            const tableBody = document.getElementById('suppliersTableBody');
            if (tableBody) {
                tableBody.addEventListener('click', function(event) {
                    const target = event.target as HTMLElement;
                    const row = target.closest('tr');
                    
                    if (row && row.getAttribute('data-supplier-id')) {
                        const currentTime = new Date().getTime();
                        const timeSinceLastClick = currentTime - lastClickTime;
                        
                        if (timeSinceLastClick < DOUBLE_CLICK_DELAY) {
                            console.log('Doble clic detectado en fila');
                            handleDoubleClick(row);
                        } else {
                            handleSingleClick(row);
                        }
                        
                        lastClickTime = currentTime;
                    }
                });
            }

            function handleSingleClick(row: HTMLTableRowElement) {
                const allRows = document.querySelectorAll('#suppliersTableBody tr');
                allRows.forEach(r => r.classList.remove('table-primary'));
                
                row.classList.add('table-primary');
                
                selectedSupplierId = row.getAttribute('data-supplier-id');
                
                console.log('Proveedor seleccionado (clic simple):', selectedSupplierId);
            }

            function handleDoubleClick(row: HTMLTableRowElement) {
                const supplierId = row.getAttribute('data-supplier-id');
                if (!supplierId) return;

                console.log('Procesando doble clic para proveedor ID:', supplierId);
                
                handleSingleClick(row);
                
                loadSupplierData(supplierId);
                
                showMessage(`Datos del proveedor cargados en el formulario. Puede editarlos y hacer clic en "Actualizar".`, 'info');
                
                console.log('Formulario llenado automáticamente (doble clic) para proveedor:', supplierId);
            }

            const applyFiltersBtn = document.getElementById('applyFilters');
            const clearFiltersBtn = document.getElementById('clearFilters');
            const filterButton = document.getElementById('filterButton');
            const filtersAccordion = document.getElementById('filtersAccordion');
            const sortButton = document.getElementById('sortButton');
            const sortDropdown = document.getElementById('sortDropdown');
            
            const searchId = document.getElementById('searchId') as HTMLInputElement;
            const searchName = document.getElementById('searchName') as HTMLInputElement;
            const searchEmail = document.getElementById('searchEmail') as HTMLInputElement;
            const searchStatus = document.getElementById('searchStatus') as HTMLSelectElement;
            
            const filterId = document.getElementById('filterId') as HTMLInputElement;
            const filterName = document.getElementById('filterName') as HTMLInputElement;
            const filterPhone = document.getElementById('filterPhone') as HTMLInputElement;
            const filterEmail = document.getElementById('filterEmail') as HTMLInputElement;
            const filterStatus = document.getElementById('filterStatus') as HTMLSelectElement;
            
            const initialDataElement = document.getElementById('initial-suppliers-data');
            
            if (initialDataElement && initialDataElement.dataset.suppliers) {
                allSuppliers = JSON.parse(initialDataElement.dataset.suppliers);
                console.log('Datos iniciales cargados:', allSuppliers.length, 'proveedores');
                console.log('Primer proveedor:', allSuppliers[0]);
            } else {
                console.error('No se pudieron cargar los datos iniciales');
                allSuppliers = [];
            }

            let currentFilters = {
                id: '',
                name: '',
                phone: '',
                email: '',
                status: 'active',
            };

            let currentSort = {
                by: 'id',
                order: 'asc'
            };

            let isFiltersVisible = false;
            let isSortVisible = false;

            function toggleSortDropdown() {
                isSortVisible = !isSortVisible;
                if (sortDropdown) {
                    if (isSortVisible) {
                        sortDropdown.style.display = 'block';
                        if (sortButton) sortButton.classList.add('active');
                        if (isFiltersVisible) {
                            toggleFiltersAccordion();
                        }
                    } else {
                        sortDropdown.style.display = 'none';
                        if (sortButton) sortButton.classList.remove('active');
                    }
                }
            }

            function toggleFiltersAccordion() {
                isFiltersVisible = !isFiltersVisible;
                if (filtersAccordion) {
                    if (isFiltersVisible) {
                        filtersAccordion.style.display = 'block';
                        if (filterButton) filterButton.classList.add('active');
                        if (isSortVisible) {
                            toggleSortDropdown();
                        }
                    } else {
                        filtersAccordion.style.display = 'none';
                        if (filterButton) filterButton.classList.remove('active');
                    }
                }
            }

            function applySort(sortBy: string | null, sortOrder: string | null) {
                console.log('Aplicando ordenamiento:', sortBy, sortOrder);
                if (sortBy) currentSort.by = sortBy;
                if (sortOrder) currentSort.order = sortOrder;
                updateTable();
                
                if (isSortVisible) {
                    toggleSortDropdown();
                }
            }

            function applyQuickSearch() {
                console.log('Aplicando búsqueda rápida...');
                currentFilters = {
                    id: searchId ? searchId.value.toLowerCase() : '',
                    name: searchName ? searchName.value.toLowerCase() : '',
                    phone: searchPhone ? searchPhone.value.toLowerCase() : '',
                    email: searchEmail ? searchEmail.value.toLowerCase() : '',
                    status: searchStatus ? searchStatus.value : 'active',
                };
                updateTable();
            }

            function applyAdvancedFilters() {
                console.log('Aplicando filtros avanzados...');
                currentFilters = {
                    id: filterId ? filterId.value.toLowerCase() : '',
                    name: filterName ? filterName.value.toLowerCase() : '',
                    phone: filterPhone ? filterPhone.value.toLowerCase() : '',
                    email: filterEmail ? filterEmail.value.toLowerCase() : '',
                    status: filterStatus ? filterStatus.value : 'active',
                };
                updateTable();
                
                if (isFiltersVisible) {
                    toggleFiltersAccordion();
                }
            }

            function clearAllFilters() {
                console.log('Limpiando todos los filtros...');
                
                if (searchId) searchId.value = '';
                if (searchName) searchName.value = '';
                if (searchPhone) searchPhone.value = '';
                if (searchEmail) searchEmail.value = '';
                if (searchStatus) searchStatus.value = '';
                
                if (filterId) filterId.value = '';
                if (filterName) filterName.value = '';
                if (filterPhone) filterPhone.value = '';
                if (filterEmail) filterEmail.value = '';
                if (filterStatus) filterStatus.value = 'active';
                
                currentFilters = {
                    id: '',
                    name: '',
                    phone: '',
                    email: '',
                    status: 'active',
                };
                
                updateTable();
            }

            function sortSuppliers(suppliers: any[]) {
                return suppliers.sort((a: { supplierId: string; name: string; email: string; active: any; }, b: { supplierId: string; name: string; email: string; active: any; }) => {
                    let valueA, valueB;
                    
                    switch (currentSort.by) {
                        case 'id':
                            valueA = a.supplierId || '';
                            valueB = b.supplierId || '';
                            const numA = Number(valueA);
                            const numB = Number(valueB);
                            valueA = isNaN(numA) ? valueA.toString().toLowerCase() : numA;
                            valueB = isNaN(numB) ? valueB.toString().toLowerCase() : numB;
                            break;
                        case 'name':
                            valueA = a.name || '';
                            valueB = b.name || '';
                            valueA = valueA.toString().toLowerCase();
                            valueB = valueB.toString().toLowerCase();
                            break;
                        case 'email':
                            valueA = a.email || '';
                            valueB = b.email || '';
                            valueA = valueA.toString().toLowerCase();
                            valueB = valueB.toString().toLowerCase();
                            break;
                        case 'status':
                            valueA = a.active ? 1 : 0;
                            valueB = b.active ? 1 : 0;
                            break;
                        default:
                            valueA = a.supplierId || '';
                            valueB = b.supplierId || '';
                    }
                    
                    if (currentSort.order === 'asc') {
                        return valueA < valueB ? -1 : valueA > valueB ? 1 : 0;
                    } else {
                        return valueA > valueB ? -1 : valueA < valueB ? 1 : 0;
                    }
                });
            }

            function updateTable() {
                if (!tableBody) {
                    console.error('No se encontró el elemento suppliersTableBody');
                    return;
                }

                if (!allSuppliers.length) {
                    console.log('No hay datos de proveedores para mostrar');
                    tableBody.innerHTML = '<tr><td colspan="5" class="text-center">No hay datos disponibles</td></tr>';
                    return;
                }
                
                console.log('Filtros aplicados:', currentFilters);
                console.log('Ordenamiento aplicado:', currentSort);

                let filteredSuppliers = allSuppliers.filter(supplier => {
                    if (currentFilters.status === 'active' && !supplier.active) {
                        return false;
                    }
                    if (currentFilters.status === 'inactive' && supplier.active) {
                        return false;
                    }
                    
                    if (currentFilters.id && supplier.supplierId) {
                        const supplierId = supplier.supplierId.toString().toLowerCase();
                        if (!supplierId.includes(currentFilters.id)) {
                            return false;
                        }
                    }
                    
                    if (currentFilters.name && supplier.name) {
                        const supplierName = supplier.name.toLowerCase();
                        if (!supplierName.includes(currentFilters.name)) {
                            return false;
                        }
                    }
                    
                    if (currentFilters.phone && supplier.phone) {
                        const supplierPhone = supplier.phone ? supplier.phone.toString().toLowerCase() : '';
                        if (!supplierPhone.includes(currentFilters.phone)) {
                            return false;
                        }
                    }
                    
                    if (currentFilters.email && supplier.email) {
                        const supplierEmail = supplier.email.toLowerCase();
                        if (!supplierEmail.includes(currentFilters.email)) {
                            return false;
                        }
                    }
                    
                    return true;
                });

                filteredSuppliers = sortSuppliers(filteredSuppliers);

                currentFilteredSuppliers = filteredSuppliers;
                console.log('Proveedores filtrados guardados:', currentFilteredSuppliers.length);

                console.log('Proveedores filtrados y ordenados:', filteredSuppliers.length);

                if (filteredSuppliers.length === 0) {
                    tableBody.innerHTML = `
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                <div class="text-muted">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                                    </svg>
                                    <p class="mt-2 mb-0">No se encontraron proveedores</p>
                                    <small>Intenta con otros criterios de búsqueda</small>
                                </div>
                            </td>
                        </tr>
                    `;
                } else {
                    tableBody.innerHTML = filteredSuppliers.map(supplier => `
                        <tr data-supplier-id="${supplier.supplierId || 'N/A'}">
                            <th scope="row">${supplier.supplierId || 'N/A'}</th>
                            <td>${supplier.name || ''}</td>
                            <td>${supplier.phone || ''}</td>
                            <td>${supplier.email || ''}</td>
                            <td>
                                <span class="badge ${supplier.active ? 'bg-success' : 'bg-danger'}">
                                    ${supplier.active ? 'Activo' : 'Inactivo'}
                                </span>
                            </td>
                        </tr>
                    `).join('');
                }
            }

            if (applyFiltersBtn) {
                applyFiltersBtn.addEventListener('click', applyAdvancedFilters);
            }
            
            if (clearFiltersBtn) {
                clearFiltersBtn.addEventListener('click', clearAllFilters);
            }

            if (filterButton) {
                filterButton.addEventListener('click', toggleFiltersAccordion);
            }

            if (sortButton) {
                sortButton.addEventListener('click', toggleSortDropdown);
            }

            const sortOptions = document.querySelectorAll('.sort-option');
            sortOptions.forEach(option => {
                option.addEventListener('click', function(this: HTMLElement) {
                    const sortBy = this.getAttribute('data-sort-by');
                    const sortOrder = this.getAttribute('data-sort-order');
                    applySort(sortBy, sortOrder);
                });
            });

            const quickSearchInputs = [searchId, searchName, searchPhone, searchEmail, searchStatus];
            quickSearchInputs.forEach(input => {
                if (input) {
                    input.addEventListener('input', applyQuickSearch);
                    input.addEventListener('change', applyQuickSearch);
                }
            });

            const advancedFilterInputs = [filterId, filterName, filterPhone, filterEmail, filterStatus];
            advancedFilterInputs.forEach(input => {
                if (input) {
                    input.addEventListener('keypress', function(e) {
                        if ((e as KeyboardEvent).key === 'Enter') {
                            applyAdvancedFilters();
                        }
                    });
                }
            });

            document.addEventListener('click', function(event) {
                const target = event.target as Node;
                if (isSortVisible && sortButton && !sortButton.contains(target) && sortDropdown && !sortDropdown.contains(target)) {
                    toggleSortDropdown();
                }
                if (isFiltersVisible && filterButton && !filterButton.contains(target) && filtersAccordion && !filtersAccordion.contains(target)) {
                    toggleFiltersAccordion();
                }
            });

            updateTable();
            console.log('Sistema de proveedores inicializado correctamente');
        });

        window.addEventListener('load', function() {
            console.log('Ventana cargada, verificando navegación de inventario...');
            setTimeout(setupLeftBarNavigation, 300);
        });
    </script>
