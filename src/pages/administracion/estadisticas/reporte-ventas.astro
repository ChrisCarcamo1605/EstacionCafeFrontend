    <script>
    declare const XLSX: any;
    
    const EMAIL_SERVICE_URL = 'http://localhost:3003/api/send-report';

    const routeMap = {
        "Estadisticas de Ventas": "http://localhost:4321/administracion/estadisticas/estadisticas-ventas",
        "Estadisticas de Gastos": "http://localhost:4321/administracion/estadisticas/estadisticas-gastos", 
        "Reporte de Ventas": "http://localhost:4321/administracion/estadisticas/reporte-ventas"
    };

    function setupLeftBarNavigation() {
        setTimeout(() => {
            const sidebarItems = document.querySelectorAll('.sidebar-item, .nav-link, .list-group-item, [class*="option"], [class*="item"]');
            sidebarItems.forEach(item => {
                const text = item.textContent?.trim();
                if (text && text in routeMap) {
                    (item as HTMLElement).style.cursor = 'pointer';
                    item.addEventListener('click', () => {
                        window.location.href = routeMap[text as keyof typeof routeMap];
                    });
                }
            });
        }, 100);
    }

    function getSavedEmail() {
        const savedEmail = localStorage.getItem('reportEmail');
        return savedEmail || 'vanspsschristopher1@gmail.com';
    }

    function showStatus(message: string, isSuccess = true) {
        let statusElement = document.getElementById('report-status');
        if (!statusElement) {
            statusElement = document.createElement('div');
            statusElement.id = 'report-status';
            statusElement.className = `alert ${isSuccess ? 'alert-success' : 'alert-danger'} mt-3`;
            statusElement.style.display = 'none';
            const emailInfo = document.getElementById('email-info');
            if (emailInfo && emailInfo.parentNode) {
                emailInfo.parentNode.insertBefore(statusElement, emailInfo.nextSibling);
            }
        }
        
        statusElement.textContent = message;
        statusElement.style.display = 'block';
        
        setTimeout(() => {
            statusElement.style.display = 'none';
        }, 5000);
    }

    function generateExcelFile() {
        try {
            const filasVisibles = Array.from(document.querySelectorAll('#tablaReportes tbody tr'))
                .filter((fila): fila is HTMLElement => (fila as HTMLElement).style.display !== 'none');
            
            if (filasVisibles.length === 0) {
                throw new Error('No hay datos para exportar');
            }

            const datosExcel = [];
            datosExcel.push(['ID Factura', 'Cliente', 'Fecha', 'D√≠a', 'Hora', 'Caja', 'Total ($)']);
            
            filasVisibles.forEach((fila: HTMLElement) => {
                const celdas = fila.querySelectorAll('td, th');
                const filaDatos = [];
                
                filaDatos.push(celdas[0]?.textContent?.trim() || '');
                filaDatos.push(celdas[1]?.textContent?.trim() || '');
                filaDatos.push(celdas[2]?.textContent?.trim() || '');
                filaDatos.push(celdas[3]?.textContent?.trim() || '');
                filaDatos.push(celdas[4]?.textContent?.trim() || '');
                filaDatos.push(celdas[5]?.textContent?.trim() || '');
                const totalTexto = celdas[6]?.textContent?.trim() || '0';
                const totalLimpio = totalTexto.replace('$', '').trim();
                filaDatos.push(parseFloat(totalLimpio) || 0);
                
                datosExcel.push(filaDatos);
            });

            const workbook = XLSX.utils.book_new();
            const worksheet = XLSX.utils.aoa_to_sheet(datosExcel);
            
            if (!worksheet['!cols']) worksheet['!cols'] = [];
            worksheet['!cols'][0] = { width: 12 };
            worksheet['!cols'][1] = { width: 25 };
            worksheet['!cols'][2] = { width: 12 };
            worksheet['!cols'][3] = { width: 12 };
            worksheet['!cols'][4] = { width: 10 };
            worksheet['!cols'][5] = { width: 10 };
            worksheet['!cols'][6] = { width: 12 };
            
            XLSX.utils.book_append_sheet(workbook, worksheet, 'Reporte Ventas');
            
            const fecha = new Date().toISOString().split('T')[0];
            const fechaDesdeInput = document.getElementById('fechaDesde') as HTMLInputElement;
            const fechaHastaInput = document.getElementById('fechaHasta') as HTMLInputElement;
            
            const fechaDesde = fechaDesdeInput?.value || '';
            const fechaHasta = fechaHastaInput?.value || '';
            
            let nombreArchivo = `reporte_ventas_${fecha}.xlsx`;
            if (fechaDesde && fechaHasta) {
                nombreArchivo = `reporte_ventas_${fechaDesde}_a_${fechaHasta}.xlsx`;
            }
            
            const excelBuffer = XLSX.write(workbook, { bookType: 'xlsx', type: 'array' });
            const excelBlob = new Blob([excelBuffer], {
                type: 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet'
            });
            
            return {
                blob: excelBlob,
                filename: nombreArchivo,
                rowCount: filasVisibles.length
            };
            
        } catch (error) {
            console.error('Error generando Excel:', error);
            throw new Error(`Error al generar el archivo Excel: ${error instanceof Error ? error.message : String(error)}`);
        }
    }

    async function sendReportWithBackend(excelBlob: Blob, filename: string, rowCount: number): Promise<{ success: boolean; message?: string; error?: string }> {
        try {
            const savedEmail = getSavedEmail();
            
            const fechaDesdeValue = (document.getElementById('fechaDesde') as HTMLInputElement)?.value || 'Inicio';
            const fechaHastaValue = (document.getElementById('fechaHasta') as HTMLInputElement)?.value || 'Fin';

            const subject = `üìä Reporte de Ventas - ${new Date().toLocaleDateString('es-ES')}`;
            const message = `Se adjunta el reporte de ventas "${filename}" generado autom√°ticamente.

üìÖ Fecha de generaci√≥n: ${new Date().toLocaleString('es-ES')}
üìã Total de registros: ${rowCount} ventas
üí∞ Per√≠odo: ${fechaDesdeValue} a ${fechaHastaValue}

Este es un reporte autom√°tico del sistema de ventas.

Saludos,
Sistema de Reportes Automatizado - Estaci√≥n Caf√©`;

            const excelData = await new Promise<string>((resolve, reject) => {
                const reader = new FileReader();
                reader.onload = () => {
                    const base64 = reader.result as string;
                    const base64Data = base64.split(',')[1];
                    resolve(base64Data);
                };
                reader.onerror = reject;
                reader.readAsDataURL(excelBlob);
            });

            console.log('üì§ Enviando correo mediante backend...', {
                to: savedEmail,
                filename: filename,
                excelDataSize: excelData.length,
                url: EMAIL_SERVICE_URL
            });

            const response = await fetch(EMAIL_SERVICE_URL, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    toEmail: savedEmail,
                    subject: subject,
                    message: message,
                    filename: filename,
                    excelData: excelData
                })
            });

            console.log('üì° Response status:', response.status, response.statusText);

            if (!response.ok) {
                const errorText = await response.text();
                console.error('‚ùå Error response:', errorText);
                throw new Error(`HTTP ${response.status}: ${response.statusText} - ${errorText}`);
            }

            const result = await response.json();
            console.log('üì® Respuesta del servidor:', result);

            if (result.success) {
                console.log('‚úÖ Correo enviado exitosamente:', result);
                return { 
                    success: true, 
                    message: `üìß Reporte enviado autom√°ticamente a ${savedEmail}` 
                };
            } else {
                console.error('‚ùå Error del backend:', result.error);
                return { 
                    success: false, 
                    error: `Error del servidor: ${result.error}` 
                };
            }

        } catch (error) {
            console.error('‚ùå Error enviando correo:', error);
            return { 
                success: false, 
                error: `Error de conexi√≥n: ${error instanceof Error ? error.message : String(error)}. El archivo se descarg√≥ correctamente.` 
            };
        }
    }

    async function generarReporteCompleto() {
        try {
            showStatus('üîÑ Iniciando generaci√≥n de reporte...', true);

            showStatus('üìä Generando archivo Excel...', true);
            
            const { blob: excelBlob, filename: nombreArchivo, rowCount } = generateExcelFile();
            
            console.log('‚úÖ Excel generado:', nombreArchivo, 'Registros:', rowCount);

            showStatus('üì• Descargando reporte localmente...', true);
            
            const downloadUrl = URL.createObjectURL(excelBlob);
            const downloadLink = document.createElement('a');
            downloadLink.href = downloadUrl;
            downloadLink.download = nombreArchivo;
            document.body.appendChild(downloadLink);
            downloadLink.click();
            document.body.removeChild(downloadLink);
            
            console.log('‚úÖ Descarga iniciada:', nombreArchivo);

            showStatus('üìß Enviando reporte por correo electr√≥nico...', true);

            const emailResult = await sendReportWithBackend(excelBlob, nombreArchivo, rowCount);

            if (emailResult.success) {
                showStatus(`‚úÖ ${emailResult.message}`, true);
                
                setTimeout(() => {
                    showStatus(`üéâ ¬°Proceso completado! Reporte "${nombreArchivo}" generado, descargado y enviado autom√°ticamente`, true);
                }, 1000);
            } else {
                showStatus(`‚ö†Ô∏è ${emailResult.error}`, false);
            }
            
            setTimeout(() => {
                URL.revokeObjectURL(downloadUrl);
            }, 1000);
            
        } catch (error) {
            console.error('‚ùå Error en el proceso:', error);
            const errorMessage = (error instanceof Error) ? error.message : String(error);
            showStatus(`‚ùå Error: ${errorMessage}`, false);
        }
    }

    function filtrarPorFecha() {
        const fechaDesdeInput = document.getElementById('fechaDesde') as HTMLInputElement;
        const fechaHastaInput = document.getElementById('fechaHasta') as HTMLInputElement;
        
        const fechaDesde = fechaDesdeInput?.value || '';
        const fechaHasta = fechaHastaInput?.value || '';
        
        const filas = document.querySelectorAll('#tablaReportes tbody tr');
        
        filas.forEach((fila: Element) => {
            const fechaFactura = fila.getAttribute('data-fecha');
            if (!fechaFactura) {
                (fila as HTMLElement).style.display = 'none';
                return;
            }
            
            const fechaFacturaDate = new Date(fechaFactura);
            let mostrar = true;
            
            if (fechaDesde) {
                const desdeDate = new Date(fechaDesde);
                if (fechaFacturaDate < desdeDate) {
                    mostrar = false;
                }
            }
            
            if (fechaHasta) {
                const hastaDate = new Date(fechaHasta);
                hastaDate.setHours(23, 59, 59, 999);
                if (fechaFacturaDate > hastaDate) {
                    mostrar = false;
                }
            }
            
            (fila as HTMLElement).style.display = mostrar ? '' : 'none';
        });
    }

    function initializeEventListeners() {
        const generarReporteBtn = document.getElementById('generarReporte');
        const fechaDesdeInput = document.getElementById('fechaDesde');
        const fechaHastaInput = document.getElementById('fechaHasta');
        
        if (generarReporteBtn) {
            generarReporteBtn.addEventListener('click', generarReporteCompleto);
        }
        
        if (fechaDesdeInput) {
            fechaDesdeInput.addEventListener('change', filtrarPorFecha);
        }
        
        if (fechaHastaInput) {
            fechaHastaInput.addEventListener('change', filtrarPorFecha);
        }
    }

    function setDefaultDates() {
        const fechaDesdeInput = document.getElementById('fechaDesde') as HTMLInputElement;
        const fechaHastaInput = document.getElementById('fechaHasta') as HTMLInputElement;
        
        if (fechaDesdeInput && fechaHastaInput) {
            const hoy = new Date();
            const hace30Dias = new Date();
            hace30Dias.setDate(hoy.getDate() - 30);
            
            fechaDesdeInput.value = hace30Dias.toISOString().split('T')[0];
            fechaHastaInput.value = hoy.toISOString().split('T')[0];
        }
    }

    function showEmailInfo() {
        const emailInfo = document.getElementById('email-info');
        const currentEmail = document.getElementById('current-email');
        if (emailInfo && currentEmail) {
            const savedEmail = getSavedEmail();
            currentEmail.textContent = savedEmail;
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        initializeEventListeners();
        setDefaultDates();
        showEmailInfo();
        setupLeftBarNavigation();
        setTimeout(filtrarPorFecha, 100);
        
        console.log('‚úÖ Sistema de reportes inicializado correctamente');
        console.log('üìß Servicio de correo configurado en:', EMAIL_SERVICE_URL);
    });
    </script>
</Layout>

