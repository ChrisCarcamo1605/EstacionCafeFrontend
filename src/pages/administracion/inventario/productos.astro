---
export const prerender = false;
import Layout from "../../../layouts/Layout.astro";
import Navbar from "../../../components/Navbar.astro";
import LeftBar from "../../../components/LeftBar.astro";
import {BACKEND_API_URL} from '../../../config/api';

const sidebarOptions = [
  "Consumibles",
  "Productos",
  "Ingredientes",
  "Proveedores",
];

const inventoryRouteMap: Record<string, string> = {
  Consumibles: "/administracion/inventario/consumibles",
  Productos: "/administracion/inventario/productos",
  Ingredientes: "/administracion/inventario/ingredientes",
  Proveedores: "/administracion/inventario/proveedores",
};

const productsResponse = await fetch(`${BACKEND_API_URL}/products`, {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
    },
});

let productsData = null;
if (productsResponse.ok) {
    const result = await productsResponse.json();
    productsData = result.data;
    console.log('Datos de productos:', productsData);
} else {
    console.error("Error fetching products data:", productsResponse.statusText);
}

const typesResponse = await fetch(`${BACKEND_API_URL}/product-type`, {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
    },
});

let productTypesData = [];
if (typesResponse.ok) {
    const result = await typesResponse.json();
    productTypesData = result.data || [];
    console.log('Tipos de productos:', productTypesData);
} else {
    console.error("Error fetching product types data:", typesResponse.statusText);
}

const initialProducts = productsData || [];
const productTypes = productTypesData || [];
---

<Layout>
