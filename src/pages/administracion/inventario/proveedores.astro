---
export const prerender = false;
import Layout from "../../../layouts/Layout.astro";
import Navbar from "../../../components/Navbar.astro";
import LeftBar from "../../../components/LeftBar.astro";

const sidebarOptions = ["Consumibles", "Productos", "Ingredientes", "Proveedores"];

const response = await fetch("http://localhost:3484/api/suppliers", {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
    },
});

let suppliersData = null;
if (response.ok) {
    const result = await response.json();
    suppliersData = result.data;
    console.log('Datos de proveedores:', suppliersData);
} else {
    console.error("Error fetching suppliers data:", response.statusText);
}

const initialSuppliers = suppliersData || [];
---

<Layout>
    <div class="d-flex flex-column" style="min-height: 100vh;">
        <Navbar />

        <div class="d-flex flex-grow-1">
            <LeftBar title="Inventario" options={sidebarOptions} selectedOption="Proveedores" />

            <div class="main-content-with-navbar-sidebar flex-grow-1" style="background-color: #f8f9fa; font-family: 'Roboto', sans-serif; position: relative;">
                <div class="p-4">
                    <!-- BOTONES EN LA ESQUINA SUPERIOR DERECHA (no fijos) -->
