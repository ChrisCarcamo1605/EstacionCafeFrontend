---
export const prerender = false;
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
const options = ["Inventario", "Estadísticas", "Usuarios", "Gastos", "Ajustes"];
---

<Layout>
  <Navbar />

  <!-- PADDING AJUSTADO: menos padding arriba para subir el botón -->
  <div
    class="container-fluid bg-light"
    style="min-height: calc(100vh - 50px); padding: 20px 50px 50px 50px;"
  >
    <!-- Botón Volver - MÁS GRANDE -->

    <a href="/home">
      <div class="mb-3">
        <button
          class="btn btn-link text-dark text-decoration-none p-0 align-items-center d-flex flex-row"
        >
          <div>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
            >
              <path
                fill="currentColor"
                d="m4 10l-.707.707L2.586 10l.707-.707zm17 8a1 1 0 1 1-2 0zM8.293 15.707l-5-5l1.414-1.414l5 5zm-5-6.414l5-5l1.414 1.414l-5 5zM4 9h10v2H4zm17 7v2h-2v-2zm-7-7a7 7 0 0 1 7 7h-2a5 5 0 0 0-5-5z"
              ></path>
            </svg>
          </div>
          <span class="ms-2 fw-medium" style="font-size: 1.1rem;">Volver</span>
        </button>
      </div>
    </a>

    <div class="row g-2" style="height: calc(100vh - 150px);">
      <!-- Redirige a consumibles -->
      <div class="col-md-4" style="height: 100%;">
        <a href="/consumibles" class="text-decoration-none">
          <div class="card shadow border-0 admin-card h-100">
            <div style="position: relative; height: 100%;">
              <img
                src="/inventario.jpg"
                class="card-img"
                alt="Inventario"
                style="height: 100%; width: 100%; object-fit: cover;"
              />
              <div class="color-overlay"></div>
              <div class="card-overlay">
                <h3 class="card-title-overlay">Inventario</h3>
              </div>
            </div>
          </div>
        </a>
      </div>

      <!-- Redirige a estadisticas-ventas -->
      <div class="col-md-4" style="height: 100%;">
        <a href="/estadisticas-ventas" class="text-decoration-none">
          <div class="card shadow border-0 admin-card h-100">
            <div style="position: relative; height: 100%;">
              <img
                src="/estadisticas.jpg"
                class="card-img"
                alt="Estadísticas"
                style="height: 100%; width: 100%; object-fit: cover;"
              />
              <div class="color-overlay"></div>
              <div class="card-overlay">
                <h3 class="card-title-overlay">Estadísticas</h3>
              </div>
            </div>
          </div>
        </a>
      </div>

      <!-- Redirige a planilla -->
      <div class="col-md-4" style="height: 100%;">
        <div class="row g-2 h-100">
          <div class="col-12" style="height: calc(33.33% - 5px);">
            <a href="/planilla" class="text-decoration-none">
              <div class="card shadow border-0 admin-card h-100">
                <div style="position: relative; height: 100%;">
                  <img
                    src="/usuarios.jpg"
                    class="card-img"
                    alt="Usuarios"
                    style="height: 100%; width: 100%; object-fit: cover;"
                  />
                  <div class="color-overlay"></div>
                  <div class="card-overlay">
                    <h3 class="card-title-overlay">Usuarios</h3>
                  </div>
                </div>
              </div>
            </a>
          </div>

          <!-- Redirige a estadisticas-gastos -->
          <div class="col-12" style="height: calc(33.33% - 5px);">
            <a href="/estadisticas-gastos" class="text-decoration-none">
              <div class="card shadow border-0 admin-card h-100">
                <div style="position: relative; height: 100%;">
                  <img
                    src="/gastos.jpg"
                    class="card-img"
                    alt="Gastos"
                    style="height: 100%; width: 100%; object-fit: cover;"
                  />
                  <div class="color-overlay"></div>
                  <div class="card-overlay">
                    <h3 class="card-title-overlay">Gastos</h3>
                  </div>
                </div>
              </div>
            </a>
          </div>

          <!-- Redirige a ajustes-general -->
          <div class="col-12" style="height: calc(33.33% - 5px);">
            <a href="/ajustes-general" class="text-decoration-none">
              <div
                class="card shadow border-0 admin-card h-100"
                style="background-color: #000;"
              >
                <div
                  style="position: relative; height: 100%; background-color: #000; display: flex; align-items: center; justify-content: center;"
                >
                  <div class="text-center" style="color: white;">
                    <h3 class="card-title-overlay">Ajustes</h3>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<!-- Importar íconos de Bootstrap -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
  rel="stylesheet"
/>

