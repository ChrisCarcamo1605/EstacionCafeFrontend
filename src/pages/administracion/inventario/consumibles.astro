---
export const prerender = false;
import Layout from "../../../layouts/Layout.astro";
import Navbar from "../../../components/Navbar.astro";
import LeftBar from "../../../components/LeftBar.astro";

const sidebarOptions = ["Consumibles", "Productos", "Ingredientes", "Proveedores", "Planilla"];

// Fetch de datos de consumibles
const response = await fetch("http://localhost:3484/api/consumable", {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
    },
});

// Fetch de tipos de consumibles para los selects
const consumableTypesResponse = await fetch("http://localhost:3484/api/consumable-type", {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
    },
});

// Fetch de proveedores para los selects
const suppliersResponse = await fetch("http://localhost:3484/api/suppliers", {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
    },
});

let consumablesData = [];
let consumableTypesData = [];
let suppliersData = [];

if (response.ok) {
    const result = await response.json();
    consumablesData = result.data || result;
    console.log('Datos de consumibles:', consumablesData);
} else {
    console.error("Error fetching consumables data:", response.statusText);
}

if (consumableTypesResponse.ok) {
    const result = await consumableTypesResponse.json();
    consumableTypesData = result.data || result;
    console.log('Datos de tipos de consumibles:', consumableTypesData);
} else {
    console.error("Error fetching consumable types data:", consumableTypesResponse.statusText);
}

if (suppliersResponse.ok) {
    const result = await suppliersResponse.json();
    suppliersData = result.data || result;
    console.log('Datos de proveedores:', suppliersData);
} else {
    console.error("Error fetching suppliers data:", suppliersResponse.statusText);
}

const initialConsumables = consumablesData || [];
