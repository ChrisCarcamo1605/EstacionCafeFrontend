---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import loginImage from "../../public/loginimage.jpg";
---

<Layout>
    <Navbar/>

    <div class="container-fluid bg-white p-0" style="height: calc(100vh - 56px); overflow: hidden;">
        <div class="row g-0 h-100 bg-white m-0">
            
            <div class="col-md-2 bg-white p-0 h-100">
                <div class="h-100 d-flex flex-column">
                   
                    <div class="card border-0 shadow-sm h-100 rounded-0">
                      
                        <div class="card-header bg-white border-0 py-1">
                            <div class="d-flex align-items-center">
                                <span class="fs-4 me-2 text-muted">←</span>
                                <h1 class="small mb-0 fw-normal">Volver</h1>
                            </div>
                        </div>
                        <div class="card-body p-0 d-flex flex-column">
                           
                            <div class="p-3">
                                <h2 class="h3 mb-0 text-center">Ajustes</h2>
                            </div>
                            <div class="p-0">
                                <div class="small mb-0 fw-normal text-center p-2 rounded-0" style="background-color: #F3DCBB;">General</div>
                                <div class="small mb-0 fw-normal text-center p-2">Alerta</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

           
            <div class="col-md-10 bg-white p-0 h-100">
                <div class="h-100 d-flex flex-column">
                   
                    <div class="card border-0 shadow-sm h-100 rounded-0">
                        <div class="card-header bg-white border-0 py-1">
                            <h2 class="h5 mb-0" style="font-family: Arial, sans-serif; font-weight: normal;">General</h2>
                        </div>
                        <br>
                        <div class="card-body py-2">
                           
                            <div class="mb-3">
                                <div class="small fw-bold">Tema de interfaz</div>
                                <div class="d-flex align-items-center mt-1">
                                    <span class="badge bg-white text-dark border d-flex justify-content-between align-items-center px-3 py-2 shadow-sm" style="min-width: 140px;">
                                        <span class="text-start small fw-normal">Claro</span>
                                        <span class="text-muted small ms-2">▼</span>
                                    </span>
                                </div>
                            </div>
                            
                           
                            <div class="mb-3">
                                <div class="small fw-bold">Moneda</div>
                                <div class="d-flex align-items-center mt-1">
                                    <span class="badge bg-white text-dark border d-flex justify-content-between align-items-center px-3 py-2 shadow-sm" style="min-width: 180px;">
                                        <span class="text-start small fw-normal">Dólar estadounidense</span>
                                        <span class="text-muted small ms-2">▼</span>
                                    </span>
                                </div>
                            </div>
                            
                           
                            <button class="btn btn-sm mt-2 small fw-bold shadow-sm" style="background-color: #E6E6E6; border-color: #E6E6E6; color: #000;">Guardar Cambios</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</Layout>