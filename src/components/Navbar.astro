---
import { undefined } from "astro:schema";
import EstacionCafeLogoWhite from "../../public/EstacionCafeWhite.png";

//@ts-ignore
const user = Astro.locals.user?.username;
console.log(user);
---

<nav class="navbar fourth_color p-0" data-bs-theme="dark">
  <div class="container-fluid px-5">
    <div class="w-25">
      <a href="/home">
        <img
          class="w-50 p-2 object-fit-contain"
          src={EstacionCafeLogoWhite.src}
        /></a
      >
    </div>

    <div class="d-flex align-items-center flex-row gap-3">
      <div>
        {
          user && (
            <div class="dropdown">
              <button
                class="btn btn-secondary fourth_color border-0 d-flex align-self-center"
                type="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <div class="align-items-center d-flex flex-row">
                  <span class="text-light fw-normal pe-2">{user}</span>
                  <div class="">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                    >
                      <path
                        fill="currentColor"
                        d="M12 2a5 5 0 1 1-5 5l.005-.217A5 5 0 0 1 12 2m2 12a5 5 0 0 1 5 5v1a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2v-1a5 5 0 0 1 5-5z"
                      />
                    </svg>
                  </div>
                </div>
              </button>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="#">
                    Profile
                  </a>
                </li>
                <li>
                  <a id="signOutBtn" class="dropdown-item" href="#">
                    Sign Out
                  </a>
                </li>
              </ul>
            </div>
          )
        }
      </div>
    </div>
  </div>
</nav>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


<script>
  document.addEventListener("DOMContentLoaded", () => {
    const signOutBtn = document.getElementById("signOutBtn");
    signOutBtn?.addEventListener("click", async (e) => {
      e.preventDefault();
      const response = await fetch("http://localhost:3484/api/users/logout", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        credentials: "include",
      });

      console.log(response);
      if (response.ok) {

        window.location.href ='/login'
      }
    });
  });
</script>
