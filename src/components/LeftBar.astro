---
interface Props {
  options?: string[];
  title: string;
}

const { options = [], title } = Astro.props as Props;
---

<div
  class="siderbar_left d-flex align-items-center flex-column border-end pt-3 px-3 z-2"
>
  <div class="w-100 d-flex flex-row align-items-left">
    <div role="button">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        ><path
          fill="currentColor"
          d="m4 10l-.707.707L2.586 10l.707-.707zm17 8a1 1 0 1 1-2 0zM8.293 15.707l-5-5l1.414-1.414l5 5zm-5-6.414l5-5l1.414 1.414l-5 5zM4 9h10v2H4zm17 7v2h-2v-2zm-7-7a7 7 0 0 1 7 7h-2a5 5 0 0 0-5-5z"
        ></path></svg
      >
      <span>Volver</span>
    </div>
  </div>

  <div class="mt-5 align-items-center">
    <h2 class="text-center sidebar_title">{title}</h2>

    <div class="d-flex pt-4 flex-column gap-3 align-items-center">
      {
        options && options.length > 0 ? (
          options.map((option: string) => (
            <div class="sidebar_option">
              <span>{option}</span>
            </div>
          ))
        ) : (
          <span>No hay opciones disponibles</span>
        )
      }
    </div>
  </div>
</div>
