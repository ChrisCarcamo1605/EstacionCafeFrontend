---
export const prerender = false;
import Layout from "../../../layouts/Layout.astro";
import Navbar from "../../../components/Navbar.astro";
import LeftBar from "../../../components/LeftBar.astro";
import { BACKEND_API_URL } from "../../../config/api";

const sidebarOptions = ["Consumibles", "Productos", "Ingredientes", "Proveedores"];

const inventoryRouteMap: Record<string, string> = {
    "Consumibles": "/administracion/inventario/consumibles",
    "Productos": "/administracion/inventario/productos",
    "Ingredientes": "/administracion/inventario/ingredientes",
    "Proveedores": "/administracion/inventario/proveedores"
};

const initialSuppliers = [
    { supplierId: "PROV-001", name: "Distribuidora Café Premium", phone: "555-0101", email: "ventas@cafepremium.com", active: true },
    { supplierId: "PROV-002", name: "Importadora Granos Selectos", phone: "555-0102", email: "contacto@granosselectos.com", active: true },
    { supplierId: "PROV-003", name: "Suministros Baristas", phone: "555-0103", email: "info@suministrosbaristas.com", active: false },
    { supplierId: "PROV-004", name: "Dulces y Postres La Esquina", phone: "555-0104", email: "pedidos@dulceslaesquina.com", active: true },
    { supplierId: "PROV-005", name: "Equipos Café Profesional", phone: "555-0105", email: "servicio@equiposcafe.com", active: true }
];
---

<Layout title="Proveedores">
    <div class="d-flex flex-column min-vh-100">
        <Navbar />

        <div class="d-flex flex-grow-1">
            <LeftBar title="Inventario" options={sidebarOptions} selectedOption="Proveedores" routeMap={inventoryRouteMap} />

            <div class="flex-grow-1" style="background-color: #f8f9fa; font-family: 'Roboto', sans-serif;">
                <div class="p-4">
                    <div class="d-flex align-items-start gap-5">
                        <div style="width: calc(100% - 300px);">
                            <h1 class="h3 fw-bold mb-4" style="font-family: 'Roboto', sans-serif;">Proveedores</h1>

                            <div class="d-flex gap-4 mb-3">
                                <div class="flex-grow-1">
                                    <label class="form-label fw-bold mb-2" style="font-family: 'Roboto', sans-serif;">ID</label>
                                    <input type="text" class="form-control" style="font-family: 'Roboto', sans-serif; border-radius: 8px;" readonly />
                                </div>

                                <div class="flex-grow-1">
                                    <label class="form-label fw-bold mb-2" style="font-family: 'Roboto', sans-serif;">Nombre</label>
                                    <input type="text" class="form-control" style="font-family: 'Roboto', sans-serif; border-radius: 8px;" />
                                </div>
                                
                                <div class="flex-grow-1">
                                    <label class="form-label fw-bold mb-2" style="font-family: 'Roboto', sans-serif;">Teléfono</label>
                                    <input type="text" class="form-control" style="font-family: 'Roboto', sans-serif; border-radius: 8px;" />
                                </div>
                            </div>

                            <div class="d-flex gap-4">
                                <div class="flex-grow-1">
                                    <label class="form-label fw-bold mb-2" style="font-family: 'Roboto', sans-serif;">Email</label>
                                    <input type="text" class="form-control" style="font-family: 'Roboto', sans-serif; border-radius: 8px;" />
                                </div>

                                <div class="flex-grow-1">
                                    <label class="form-label fw-bold mb-2" style="font-family: 'Roboto', sans-serif;">Estado</label>
                                    <select class="form-select" style="font-family: 'Roboto', sans-serif; border-radius: 8px;">
                                        <option selected>Activo</option>
                                        <option>Inactivo</option>
                                    </select>
                                </div>
                            </div>

                            <div class="d-flex gap-4 mt-3 align-items-center">
                                <div>
                                    <button class="btn mt-4 d-flex align-items-center gap-2" style="font-family: 'Roboto', sans-serif; border-radius: 8px; background-color: #E6E6E6; border: 1px solid #E6E6E6;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                            <path d="M3.5 2.5a.5.5 0 0 0-1 0v8.793l-1.146-1.147a.5.5 0 0 0-.708.708l2 1.999.007.007a.497.497 0 0 0 .7-.006l2-2a.5.5 0 0 0-.707-.708L3.5 11.293V2.5zm3.5 1a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zM7.5 6a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zm0 3a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1h-3zm0 3a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1h-1z"/>
                                        </svg>
                                        Ordenar
                                    </button>
                                </div>
                                <div>
                                    <button class="btn mt-4 d-flex align-items-center gap-2" style="font-family: 'Roboto', sans-serif; border-radius: 8px; background-color: #E6E6E6; border: 1px solid #E6E6E6;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                            <path d="M6 10.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z"/>
                                        </svg>
                                        Filtrar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5">
                        <div class="card shadow-sm border-0" style="border-radius: 8px;">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead style="background-color: #482E21; color: white;">
                                            <tr>
                                                <th scope="col" style="width: 15%;">ID</th>
                                                <th scope="col" style="width: 25%;">Nombre</th>
                                                <th scope="col" style="width: 20%;">Teléfono</th>
                                                <th scope="col" style="width: 25%;">Email</th>
                                                <th scope="col" style="width: 15%;">Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {initialSuppliers.map((supplier) => (
                                                <tr>
                                                    <th scope="row">{supplier.supplierId}</th>
                                                    <td>{supplier.name}</td>
                                                    <td>{supplier.phone}</td>
                                                    <td>{supplier.email}</td>
                                                    <td>
                                                        <span class={`badge ${supplier.active ? 'bg-success' : 'bg-danger'}`}>
                                                            {supplier.active ? 'Activo' : 'Inactivo'}
                                                        </span>
                                                    </td>
                                                </tr>
                                            ))}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="position-absolute mt-5" style="top: 100px; right: 40px;">
                    <div class="d-flex flex-column gap-1">
                        <button class="btn d-flex align-items-center justify-content-center gap-2" style="font-family: 'Roboto', sans-serif; border-radius: 8px; background-color: #482E21; color: white; border: 1px solid #482E21; width: 257px; height: 50px; font-size: 1.1rem;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                            </svg>
                            Agregar
                        </button>
                        <button class="btn d-flex align-items-center justify-content-center gap-2" style="font-family: 'Roboto', sans-serif; border-radius: 8px; background-color: #F3DCBB; border: 1px solid #F3DCBB; width: 257px; height: 50px; font-size: 1.1rem;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                            </svg>
                            Actualizar
                        </button>
                        <button class="btn d-flex align-items-center justify-content-center gap-2" style="font-family: 'Roboto', sans-serif; border-radius: 8px; background-color: #930000; color: white; border: 1px solid #930000; width: 257px; height: 50px; font-size: 1.1rem;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                            </svg>
                            Eliminar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 8px 12px;
    }

    .form-label {
        font-size: 1rem;
    }

    .table th {
        font-weight: 600;
        font-size: 0.875rem;
        padding: 12px 16px;
    }

    .table td {
        padding: 12px 16px;
        vertical-align: middle;
    }

    .btn {
        border-radius: 8px;
    }

    .card {
        border-radius: 8px;
    }
</style>
