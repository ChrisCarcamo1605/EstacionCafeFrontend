        <Navbar />

        <div class="d-flex flex-grow-1">
            <LeftBar title="Inventario" options={sidebarOptions} selectedOption="Productos" routeMap={inventoryRouteMap} />

            <div class="flex-grow-1" style="background-color: #f8f9fa; font-family: 'Roboto', sans-serif; position: relative;">
                <div class="p-4">
                    <div class="position-absolute" style="top: 100px; right: 20px; z-index: 10;">
                        <div class="d-flex flex-column gap-1">
                            <button 
