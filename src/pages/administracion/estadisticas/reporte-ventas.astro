---
export const prerender = false;
// src/pages/reportes-ventas.astro
import Layout from "../../../layouts/Layout.astro";
import LeftSidebar from "../../../components/LeftBar.astro";
import Navbar from "../../../components/Navbar.astro";

// Importar el CSS
import "../styles/style.css";

// Endpoint para obtener los datos de facturas
const response = await fetch("http://localhost:3484/api/bills", {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
    },
});

let jsonData = null;
if (response.ok) {
    jsonData = await response.json();
    console.log("Datos de facturas:", jsonData.data);
} else {
    console.error("Error fetching bills data:", response.statusText);
}

// Función para formatear fecha a formato local
const formatDate = (dateString: string) => {
    const date = new Date(dateString);
    return date.toLocaleDateString('es-ES');
};

// Función para obtener el día de la semana en español
const getDayOfWeek = (dateString: string) => {
    const date = new Date(dateString);
    const days = ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'];
    return days[date.getDay()];
};

// Función para obtener la hora formateada
const getTime = (dateString: string) => {
    const date = new Date(dateString);
    return date.toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit' });
};

// Procesar los datos del endpoint
const facturas = jsonData?.data || [];
---

<Layout title="Reportes de Ventas">
    <!-- Navbar en la parte superior -->
    <Navbar />
    
    <div class="d-flex">
        <!-- Sidebar a la izquierda -->
        <LeftSidebar 
            title="Resumen" 
            options={["Estadisticas de Ventas", "Estadisticas de Gastos", "Reporte de Ventas"]}
            selectedOption="Reporte de Ventas"  
        />
        
        <!-- Contenido principal -->
        <div class="flex-grow-1 p-4">
            <!-- Header de la página -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0" style="color: #482E21;">Reportes de Ventas</h2>
            </div>

            <!-- Filtros de fecha -->
            <div class="row mb-4">
                <div class="col-md-5">
                    <div class="form-group">
                        <label for="fechaDesde" class="form-label fw-semibold" style="color: #482E21;">Fecha Desde</label>
                        <input type="date" class="form-control" id="fechaDesde" />
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label for="fechaHasta" class="form-label fw-semibold" style="color: #482E21;">Fecha Hasta</label>
                        <input type="date" class="form-control" id="fechaHasta" />
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn text-white w-100" style="background-color: #482E21; border-color: #482E21;">
                        General Reporte
                    </button>
                </div>
            </div>

            <!-- Tabla de reportes con nuevo estilo -->
            <div class="mt-5">
                <div class="card shadow-sm border-0" style="border-radius: 8px;">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table">
                                <thead style="background-color: #482E21; color: white;">
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Cliente</th>
                                        <th scope="col">Fecha</th>
                                        <th scope="col">Día</th>
                                        <th scope="col">Hora</th>
                                        <th scope="col">Caja</th>
                                        <th scope="col">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {facturas.map((factura: any) => (
                                        <tr>
                                            <th scope="row">{factura.billId}</th>
                                            <td>{factura.customer}</td>
                                            <td>{formatDate(factura.date)}</td>
                                            <td>{getDayOfWeek(factura.date)}</td>
                                            <td>{getTime(factura.date)}</td>
                                            <td>{factura.cashRegister?.number || 'CAJA-001'}</td>
                                            <td>${parseFloat(factura.total).toFixed(2)}</td>
                                        </tr>
                                    ))}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style is:global>
    /* Estilos para la tabla */
    .table th {
        font-weight: 600;
        font-size: 0.875rem;
        padding: 12px 16px;
    }

    .table td {
        padding: 12px 16px;
        vertical-align: middle;
    }

    .card {
        border-radius: 8px;
    }

    /* Estilos para los botones y formularios */
    .btn {
        border-radius: 8px;
    }

    .form-control:focus {
        border-color: #482E21 !important;
        box-shadow: 0 0 0 0.2rem rgba(72, 46, 33, 0.25) !important;
    }

    /* Estilos para el fondo de las filas de la tabla */
    .table tbody tr {
        background-color: white;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    /* Responsive */
    .table-responsive {
        border-radius: 8px;
        overflow: hidden;
    }
</style>